@model Governança_de_TI.Models.EquipamentoModel

@{
    ViewData["Title"] = "Detalhes do Equipamento";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0 text-muted">Controle de Vida de Equipamentos</h4>
                    <h5 class="mb-0">Detalhes</h5>
                </div>

                <div class="row">
                    <!-- Coluna Esquerda -->
                    <div class="col-md-7">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Código</label>
                            <input value="@Model.CodigoItem" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Descrição</label>
                            <input value="@Model.Descricao" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tipo de Equipamento</label>
                            <input value="@Model.TipoEquipamento?.Nome" class="form-control" readonly />
                        </div>
                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <label class="form-label fw-bold">Série</label>
                                <input value="@Model.Serie" class="form-control" readonly />
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label class="form-label fw-bold">Modelo</label>
                                <input value="@Model.Modelo" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <label class="form-label fw-bold">Data de Compra</label>
                                <input value="@Model.DataCompra?.ToString("dd/MM/yyyy")" class="form-control" readonly />
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label class="form-label fw-bold">Vida Útil (anos)</label>
                                <input value="@Model.VidaUtilAnos" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Status</label>
                            <input value="@Model.Status" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Frequência de Manutenção</label>
                            <input value="@Model.FrequenciaManutencao" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Última Manutenção</label>
                            <input value="@(Model.DataUltimaManutencao?.ToString("dd/MM/yyyy") ?? "N/A")" class="form-control" readonly />
                        </div>

                        <!-- Campos de Alerta -->
                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <label class="form-label fw-bold">Dias de Alerta</label>
                                <input value="@Model.DiasAlertaManutencao" class="form-control" readonly />
                            </div>
                            <div class="col-sm-6 mb-3 d-flex align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" disabled @(Model.EnviarEmailAlerta ? "checked" : "") />
                                    <label class="form-check-label fw-bold">Enviar Email de Alerta</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Coluna Direita -->
                    <div class="col-md-5 d-flex flex-column align-items-center">
                        <div class="mb-3 text-center">
                            <label class="form-label fw-bold">Imagem do Equipamento</label>
                            <img src="@(string.IsNullOrEmpty(Model.ImagemUrl) ? "https://placehold.co/250x250/f0f0f0/ccc?text=Imagem" : Url.Content("~" + Model.ImagemUrl))"
                                 alt="Imagem do Equipamento" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;" />
                        </div>

                        <div class="mb-3 w-100">
                            <label class="form-label fw-bold">Anexo</label>
                            @if (!string.IsNullOrEmpty(Model.AnexoUrl))
                            {
                                <a href="@Url.Content("~" + Model.AnexoUrl)" class="btn btn-outline-secondary w-100" target="_blank">
                                    <i class="bi bi-download me-2"></i> Baixar Anexo
                                </a>
                            }
                            else
                            {
                                <p class="text-muted text-center">Nenhum anexo disponível.</p>
                            }
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-end">
                    <a asp-action="Consulta" class="btn btn-outline-secondary me-2">Voltar</a>
                    <a asp-action="Editar" asp-route-id="@Model.CodigoItem" class="btn btn-secondary me-2">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@Model.CodigoItem" class="btn btn-danger">Excluir</a>
                </div>
            </div>
        </div>
    </div>
</div>
