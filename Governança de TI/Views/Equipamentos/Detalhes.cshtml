@model Governança_de_TI.Models.EquipamentoModel

@{
    ViewData["Title"] = "Detalhes do Equipamento";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0 text-muted">Controle de Vida de Equipamentos</h4>
                    <h5 class="mb-0">Detalhes</h5>
                </div>

                <div class="row">
                    <!-- Coluna da Esquerda: Dados do Equipamento -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CodigoItem" class="form-label fw-bold"></label>
                            <input asp-for="CodigoItem" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label fw-bold"></label>
                            <input asp-for="Descricao" class="form-control" readonly />
                        </div>
                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <label asp-for="Serie" class="form-label fw-bold"></label>
                                <input asp-for="Serie" class="form-control" readonly />
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label asp-for="Modelo" class="form-label fw-bold"></label>
                                <input asp-for="Modelo" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DataCompra" class="form-label fw-bold"></label>
                            <input type="text" value="@Model.DataCompra" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DataFimGarantia" class="form-label fw-bold"></label>
                            <input type="text" value="@Model.DataFimGarantia" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataUltimaManutencao" class="form-label fw-bold"></label>
                            <input type="text" value="@(Model.DataUltimaManutencao.HasValue? Model.DataUltimaManutencao.Value.ToShortDateString() : "N/A")" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DataDeCadastro" class="form-label fw-bold"></label>
                            <input type="text" value="@Model.DataDeCadastro" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold"></label>
                            <input asp-for="Status" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="FrequenciaManutencao" class="form-label fw-bold"></label>
                            <input asp-for="FrequenciaManutencao" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Anexo</label>
                            @if (!string.IsNullOrEmpty(Model.AnexoUrl))
                            {
                                <div class="input-group">
                                    <input type="text" value="@System.IO.Path.GetFileName(Model.AnexoUrl)" class="form-control" readonly />
                                    <a href="@Url.Content("~" + Model.AnexoUrl)" class="btn btn-outline-secondary" target="_blank" title="Baixar Anexo">
                                        <i class="bi bi-download"></i>
                                    </a>
                                </div>
                            }
                            else
                            {
                                <input type="text" value="Nenhum anexo disponível" class="form-control" readonly />
                            }
                        </div>
                        <!-- CAMPOS MOVIDOS PARA O FINAL DA COLUNA ESQUERDA -->
                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <label asp-for="DiasAlertaManutencao" class="form-label fw-bold"></label>
                                <input asp-for="DiasAlertaManutencao" class="form-control" readonly />
                            </div>
                            <div class="col-sm-6 mb-3 d-flex align-items-end">
                                <div class="form-check">
                                    <input asp-for="EnviarEmailAlerta" class="form-check-input" type="checkbox" disabled />
                                    <label asp-for="EnviarEmailAlerta" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Coluna da Direita: Apenas Imagem -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Imagem do Produto</label>
                        <div class="text-center mb-3">
                            <img src="@(string.IsNullOrEmpty(Model.ImagemUrl) ? "https://placehold.co/250x250/f0f0f0/ccc?text=Imagem" : Url.Content("~" + Model.ImagemUrl))"
                                 alt="Imagem do Equipamento" class="img-fluid rounded" style="max-height: 250px;" />
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-end">
                    <a asp-action="Consulta" class="btn btn-outline-secondary me-2">Voltar</a>
                    <a asp-action="Editar" asp-route-id="@Model.CodigoItem" class="btn btn-secondary me-2">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@Model.CodigoItem" class="btn btn-danger">Excluir</a>
                </div>
            </div>
        </div>
    </div>
</div>