@model Governança_de_TI.Models.EquipamentoModel

<!-- ===================== EDITAR EQUIPAMENTO (MODAL PARTIAL) ===================== -->
<div class="p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-semibold text-muted mb-0">
            <i class="bi bi-hdd-stack me-2"></i>Controle de Vida de Equipamentos
        </h5>
        <span class="badge bg-light text-dark px-3 py-2 shadow-sm">
            <i class="bi bi-pencil-square me-2"></i>Edição
        </span>
    </div>

    <form id="formEditarEquipamento" asp-action="Editar" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Campos ocultos -->
        <input type="hidden" asp-for="CodigoItem" />
        <input type="hidden" asp-for="DataDeCadastro" />
        <input type="hidden" asp-for="ImagemUrl" />
        <input type="hidden" asp-for="AnexoUrl" />

        <div class="row g-4">
            <!-- ===================== COLUNA ESQUERDA ===================== -->
            <div class="col-md-7">
                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label fw-bold text-secondary">Descrição</label>
                    <input asp-for="Descricao" class="form-control shadow-sm" placeholder="Ex: Notebook Dell Inspiron 15" />
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoEquipamentoId" class="form-label fw-bold text-secondary">Tipo de Equipamento</label>
                    <div class="input-group">
                        <select asp-for="TipoEquipamentoId" asp-items="ViewBag.TipoEquipamentoId" class="form-select shadow-sm">
                            <option value="">Selecione...</option>
                        </select>
                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modalGerenciarTipos">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>
                    <span asp-validation-for="TipoEquipamentoId" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label asp-for="Serie" class="form-label fw-bold text-secondary">Série</label>
                        <input asp-for="Serie" class="form-control shadow-sm" placeholder="Número de série" />
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label asp-for="Modelo" class="form-label fw-bold text-secondary">Modelo</label>
                        <input asp-for="Modelo" class="form-control shadow-sm" placeholder="Modelo exato" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label asp-for="DataCompra" class="form-label fw-bold text-secondary">Data de Compra</label>
                        <input asp-for="DataCompra" class="form-control shadow-sm" type="date" />
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label asp-for="VidaUtilFim" class="form-label fw-bold text-secondary">Fim da Vida Útil</label>
                        <input asp-for="VidaUtilFim" class="form-control shadow-sm" type="date" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold text-secondary">Status</label>
                    <select asp-for="Status" class="form-select shadow-sm">
                        <option value="">Selecione...</option>
                        <option>Ativo</option>
                        <option>Em Manutenção</option>
                        <option>Descartado</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="FrequenciaManutencao" class="form-label fw-bold text-secondary">Frequência de Manutenção</label>
                    <select asp-for="FrequenciaManutencao" class="form-select shadow-sm">
                        <option value="">Nenhuma</option>
                        <option>Mensal</option>
                        <option>Trimestral</option>
                        <option>Anual</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="DataUltimaManutencao" class="form-label fw-bold text-secondary">Última Manutenção</label>
                    <input asp-for="DataUltimaManutencao" class="form-control shadow-sm" type="date" />
                </div>

                <div class="mb-3">
                    <label asp-for="AnexoUpload" class="form-label fw-bold text-secondary">Anexo</label>
                    <input asp-for="AnexoUpload" class="form-control form-control-sm shadow-sm" type="file" />
                </div>

                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label asp-for="DiasAlertaManutencao" class="form-label fw-bold text-secondary">Dias de Alerta</label>
                        <input asp-for="DiasAlertaManutencao" class="form-control shadow-sm" type="number" placeholder="Ex: 30" />
                    </div>
                    <div class="col-sm-6 mb-3 d-flex align-items-center">
                        <div class="form-check mt-3">
                            <input asp-for="EnviarEmailAlerta" class="form-check-input" type="checkbox" />
                            <label asp-for="EnviarEmailAlerta" class="form-check-label fw-bold text-secondary">
                                Enviar Email de Alerta
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ===================== COLUNA DIREITA ===================== -->
            <div class="col-md-5 text-center">
                <label class="form-label fw-bold text-secondary mb-2">Imagem do Equipamento</label>
                <div class="border rounded-4 bg-light d-flex justify-content-center align-items-center mx-auto mb-2"
                     style="width: 200px; height: 200px; overflow: hidden;">
                    <img id="imagePreviewEditar"
                         src="@(string.IsNullOrEmpty(Model.ImagemUrl)
                                                     ? Url.Content("~/img/default-equip.png")
                                                     : Url.Content("~" + Model.ImagemUrl))"
                         alt="Pré-visualização"
                         class="img-fluid rounded"
                         style="max-height: 180px; object-fit: cover;" />
                </div>

                <div class="mb-3">
                    <label for="ImagemUpload" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-upload me-1"></i>Alterar Imagem
                    </label>
                    <input asp-for="ImagemUpload" type="file" id="ImagemUpload" class="d-none" accept="image/*" />
                </div>

                <div class="mt-3">
                    @if (!string.IsNullOrEmpty(Model.AnexoUrl))
                    {
                        <a href="@Url.Content("~" + Model.AnexoUrl)" class="btn btn-outline-primary btn-sm w-100" target="_blank">
                            <i class="bi bi-download me-2"></i>Baixar Anexo Atual
                        </a>
                    }
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-outline-secondary me-2" data-bs-dismiss="modal">
                <i class="bi bi-x-circle me-1"></i>Cancelar
            </button>
            <button type="submit" class="btn btn-primary px-4" style="background-color: #8A2BE2; border-color: #8A2BE2;">
                <i class="bi bi-save me-1"></i>Salvar Alterações
            </button>
        </div>
    </form>
</div>

<!-- ===================== SCRIPT DE PRÉ-VISUALIZAÇÃO ===================== -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const inputImagem = document.getElementById("ImagemUpload");
        const previewImagem = document.getElementById("imagePreviewEditar");

        if (inputImagem && previewImagem) {
            inputImagem.addEventListener("change", e => {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = ev => previewImagem.src = ev.target.result;
                    reader.readAsDataURL(file);
                } else {
                    previewImagem.src = "/img/default-equip.png";
                }
            });
        }

        // Reativa a validação unobtrusive dentro da modal
        if (window.jQuery && $.validator && $.validator.unobtrusive) {
            $.validator.unobtrusive.parse("#formEditarEquipamento");
        }
    });
</script>
