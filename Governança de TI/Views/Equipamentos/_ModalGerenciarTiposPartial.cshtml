<script>
    document.addEventListener('DOMContentLoaded', function () {
        const modalEl = document.getElementById('modalGerenciarTipos');
        const listaTiposExistentes = document.getElementById('listaTiposExistentes');
        const novoTipoNome = document.getElementById('novoTipoNome');
        const btnSalvarNovoTipo = document.getElementById('btnSalvarNovoTipo');
        const tipoEquipamentoSelect = document.getElementById('TipoEquipamentoId');

        // Quando o modal abre → carregar tipos existentes
        modalEl.addEventListener('show.bs.modal', async () => {
            listaTiposExistentes.innerHTML =
                '<li class="list-group-item text-muted text-center"><div class="spinner-border spinner-border-sm me-2"></div>Carregando tipos...</li>';

            try {
                const resp = await fetch('/api/TipoEquipamento');
                if (!resp.ok) throw new Error('Erro ao buscar tipos');
                const tipos = await resp.json();

                listaTiposExistentes.innerHTML = tipos.length
                    ? tipos.map(t =>
                        `<li class="list-group-item d-flex justify-content-between align-items-center" data-id="${t.id}">
                            <span>${t.nome}</span>
                            <button class="btn btn-sm btn-outline-danger border-0 text-light">
                                <i class="bi bi-trash"></i>
                            </button>
                        </li>`).join('')
                    : '<li class="list-group-item text-center text-muted">Nenhum tipo cadastrado.</li>';
            } catch (err) {
                listaTiposExistentes.innerHTML =
                    '<li class="list-group-item text-danger text-center">Erro ao carregar tipos.</li>';
                console.error(err);
            }
        });

        // Adicionar novo tipo
        btnSalvarNovoTipo.addEventListener('click', async () => {
            const nome = novoTipoNome.value.trim();
            if (!nome) return alert('Informe um nome válido para o tipo.');

            try {
                const resp = await fetch('/api/TipoEquipamento', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ nome })
                });

                if (!resp.ok) throw new Error('Erro ao adicionar tipo');
                const novoTipo = await resp.json();

                // Adiciona no select principal
                const opt = new Option(novoTipo.nome, novoTipo.id, true, true);
                tipoEquipamentoSelect.add(opt);

                // Atualiza lista no modal
                listaTiposExistentes.insertAdjacentHTML('beforeend',
                    `<li class="list-group-item d-flex justify-content-between align-items-center" data-id="${novoTipo.id}">
                        <span>${novoTipo.nome}</span>
                        <button class="btn btn-sm btn-outline-danger border-0 text-light">
                            <i class="bi bi-trash"></i>
                        </button>
                    </li>`);

                novoTipoNome.value = '';
            } catch (err) {
                alert('Erro ao salvar tipo.');
                console.error(err);
            }
        });

        // Excluir tipo
        listaTiposExistentes.addEventListener('click', async e => {
            const btn = e.target.closest('.btn-outline-danger');
            if (!btn) return;
            const li = btn.closest('li');
            const id = li.dataset.id;
            const nome = li.querySelector('span').textContent.trim();

            if (!confirm(`Excluir o tipo "${nome}"?`)) return;

            try {
                const resp = await fetch(`/api/TipoEquipamento/${id}`, { method: 'DELETE' });
                if (!resp.ok) throw new Error('Erro ao excluir tipo');
                li.remove();

                // Remove do select principal
                const opt = tipoEquipamentoSelect.querySelector(`option[value="${id}"]`);
                if (opt) opt.remove();
            } catch (err) {
                alert('Erro ao excluir tipo.');
                console.error(err);
            }
        });
    });
</script>
