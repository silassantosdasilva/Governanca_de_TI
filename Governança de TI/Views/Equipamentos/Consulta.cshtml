@using Governança_de_TI.Models.TecgreenModels
@model List<EquipamentoModel>
@{
    ViewData["Title"] = "Consulta de Equipamentos";
}

@section Styles {
    <!-- Estilos adicionais (opcional) -->
    <style>
        /* Aparência mais moderna para a tabela */
        .table thead th {
            background-color: var(--tg-header-bg, #f8f9fa);
            color: var(--tg-text, #333);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(138, 43, 226, 0.05);
        }

        /* Modal TechGreen (herda tema) */
        #equipamentosModal .modal-content {
            background-color: var(--tg-card-bg, #fff);
            color: var(--tg-text, #222);
            border-radius: 16px;
            border: 1px solid var(--tg-border, #e5e5e5);
        }

        #equipamentosModal .modal-header,
        #equipamentosModal .modal-footer {
            background-color: var(--tg-header-bg, #f8f9fa);
            border-color: var(--tg-border, #e5e5e5);
        }

        #equipamentosModal .modal-title {
            color: var(--tg-primary, #8A2BE2);
        }

    </style>
}


<!-- ===================== CONTEÚDO PRINCIPAL ===================== -->
<div class="content-wrapper">
    <!-- FILTROS -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
                <h4 class="mb-0 text-muted fw-semibold">
                    <i class="bi bi-hdd-stack me-2"></i>Controle de Vida de Equipamentos
                </h4>

                <!-- Botão que abre a modal de criação -->
                <a asp-action="Criar"
                   class="btn btn-sm btn-outline-primary js-open-equip-modal"
                   data-title="Novo Equipamento">
                    <i class="bi bi-plus-lg me-1"></i>Novo Registro
                </a>
            </div>

            <form asp-action="Consulta" method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="codigoItem" class="form-label text-muted small">Código</label>
                    <input type="text" name="codigoItem" class="form-control form-control-sm" id="codigoItem">
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label text-muted small">Status</label>
                    <select id="status" name="status" class="form-select form-select-sm">
                        <option value="">Todos...</option>
                        <option>Ativo</option>
                        <option>Em Manutenção</option>
                        <option>Descartado</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="descricao" class="form-label text-muted small">Descrição</label>
                    <input type="text" name="descricao" class="form-control form-control-sm" id="descricao">
                </div>

                <div class="col-md-3">
                    <label for="dataCompra" class="form-label text-muted small">Data de Compra</label>
                    <input type="date" name="dataCompra" class="form-control form-control-sm" id="dataCompra">
                </div>
                <div class="col-md-3">
                    <label for="dataUltimaManutencao" class="form-label text-muted small">Última Manutenção</label>
                    <input type="date" name="dataUltimaManutencao" class="form-control form-control-sm" id="dataUltimaManutencao">
                </div>

                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100"
                            style="background-color: #8A2BE2; border-color: #8A2BE2;">
                        <i class="bi bi-search me-2"></i>Consultar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- ===================== LISTA DE EQUIPAMENTOS ===================== -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Descrição</th>
                            <th>Série</th>
                            <th>Modelo</th>
                            <th>Compra</th>
                            <th>Fim Garantia</th>
                            <th>Status</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CodigoItem</td>
                                    <td>@item.Descricao</td>
                                    <td>@item.Serie</td>
                                    <td>@item.Modelo</td>
                                    <td>@item.DataCompra?.ToShortDateString()</td>
                                    <td>@item.DataFimGarantia?.ToShortDateString()</td>
                                    <td>@item.Status</td>
                                    <td class="text-center">
                                        <!-- Botões que chamam modais -->
                                        <a asp-action="Detalhes"
                                           asp-route-id="@item.CodigoItem"
                                           class="btn btn-sm btn-outline-secondary border-0 js-open-equip-modal"
                                           data-title="Detalhes do Equipamento #@item.CodigoItem"
                                           title="Detalhes">
                                            <i class="bi bi-search"></i>
                                        </a>

                                        <a asp-action="Editar"
                                           asp-route-id="@item.CodigoItem"
                                           class="btn btn-sm btn-outline-secondary border-0 js-open-equip-modal"
                                           data-title="Editar Equipamento #@item.CodigoItem"
                                           title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a asp-action="Excluir"
                                           asp-route-id="@item.CodigoItem"
                                           class="btn btn-sm btn-outline-danger border-0 js-open-equip-modal"
                                           data-title="Excluir Equipamento #@item.CodigoItem"
                                           title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">
                                    Nenhum equipamento encontrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="areaModalTipos"></div>
<!-- ===================== MODAL REUTILIZÁVEL ===================== -->
<div class="modal fade" id="equipamentosModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content border-0 rounded-4">
            <div class="modal-header">
                <h5 class="modal-title fw-semibold" id="equipModalTitle">Carregando...</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body p-0">
                <div id="equipModalBody" class="p-3"></div>
            </div>
        </div>
    </div>
</div>
<!-- ===================== SCRIPTS ===================== -->
@section Scripts {
    <script>
        (function () {
            const modalEl = document.getElementById('equipamentosModal');
            const modalBody = document.getElementById('equipModalBody');
            const modalTitle = document.getElementById('equipModalTitle');
            const bsModal = new bootstrap.Modal(modalEl);

            const hasLoader = typeof showLoader === 'function' && typeof hideLoader === 'function';

            document.addEventListener('click', async (ev) => {
                const a = ev.target.closest('.js-open-equip-modal');
                if (!a) return;
                ev.preventDefault();

                const url = a.getAttribute('href');
                const title = a.dataset.title || 'Equipamento';
                if (!url) return;

                       try {
            hasLoader && showLoader();
            modalTitle.textContent = title;

            // Mostra loading temporário
            modalBody.innerHTML = `
                <div class="p-5 text-center text-muted">
                    <div class="spinner-border text-primary me-2"></div>
                    Carregando conteúdo…
                </div>`;

            const resp = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
            const html = await resp.text();

            //  Aplica o HTML recebido direto no corpo do modal
            modalBody.innerHTML = html;

            // Reativa validação Unobtrusive (para formulários)
            if (window.jQuery && $.validator && $.validator.unobtrusive) {
                $.validator.unobtrusive.parse(modalBody);
            }

            bsModal.show();

            // Ajusta automaticamente o tamanho da modal se o conteúdo for grande
            setTimeout(() => {
                const modalDialog = modalEl.querySelector('.modal-dialog');
                if (modalDialog) modalDialog.classList.add('modal-xxl');
            }, 200);

        } catch (e) {
            modalBody.innerHTML = `
                <div class="alert alert-danger m-3">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Erro ao carregar o conteúdo do modal.
                </div>`;
            console.error("Erro ao carregar modal:", e);
        } finally {
            hasLoader && hideLoader();
        }

            });
        })();

        // Alerta automático (fecha sucesso)
        setTimeout(() => {
            const alert = document.getElementById('success-alert');
            if (alert) new bootstrap.Alert(alert).close();
        }, 4000);

        // ===============================
        // (1) ABRIR MODAL → CRIAR TIPO
        // ===============================
               function abrirModalCriarTipo() {

            // Fecha a modal principal de Equipamento
            const modalEquipEl = document.getElementById("equipamentosModal");
            if (modalEquipEl) {
                const modalEquip = bootstrap.Modal.getInstance(modalEquipEl);
                if (modalEquip) modalEquip.hide();
            }

            // Remove backdrop e classe modal-open
            setTimeout(() => {
                document.body.classList.remove("modal-open");
                document.querySelectorAll(".modal-backdrop").forEach(b => b.remove());
            }, 150);

            // Carrega a modal Criar Tipo
            $.ajax({
                url: "/TipoEquipamento/CriarModal",
                type: "GET",
                success: function (html) {

                    $("#areaModalTipos").html(html);

                    const modalEl = document.getElementById("modalCriarTipo");

                    const modal = new bootstrap.Modal(modalEl, {
                        backdrop: false,
                        focus: true
                    });

                    modalEl.style.zIndex = "2050";
                    modal.show();
                },
                error: function () {
                    alert("Erro ao carregar a modal de Tipo de Equipamento.");
                }
            });
        }




        // ===============================
        // (2) ABRIR MODAL → LISTA DE TIPOS
        // ===============================
        function abrirModalListaTipos() {

            // Fecha a modal Criar Tipo (se estiver aberta)
            const modalCriarEl = document.getElementById("modalCriarTipo");
            if (modalCriarEl) {
                const modalCriar = bootstrap.Modal.getInstance(modalCriarEl);
                if (modalCriar) modalCriar.hide();
            }

            // Carrega e abre a modal de Lista
            $.ajax({
                url: "/TipoEquipamento/ListaModal",
                type: "GET",
                success: function (html) {

                    $("#areaModalTipos").html(html);

                    const modalEl = document.getElementById("modalListaTipos");

                    const modal = new bootstrap.Modal(modalEl, {
                        backdrop: false,
                        focus: true
                    });

                    modalEl.style.zIndex = "2050";
                    modal.show();

                    // Ao fechar a modal Lista, limpa o container
                    modalEl.addEventListener("hidden.bs.modal", () => {
                        $("#areaModalTipos").html("");
                    });
                },
                error: function () {
                    alert("Erro ao carregar lista de tipos.");
                }
            });
        }

    </script>
}