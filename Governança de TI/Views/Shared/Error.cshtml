@model Governança_de_TI.Models.ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="card shadow-sm text-center">
    <div class="card-header bg-danger text-white">
        <h1 class="h4 mb-0">Ocorreu um Erro</h1>
    </div>
    <div class="card-body">
        <h2 class="h5 text-danger">Um erro inesperado ocorreu ao processar o seu pedido.</h2>
        <p>Por favor, tente novamente mais tarde ou contacte o suporte se o problema persistir.</p>

        @if (Model.ShowRequestId)
        {
            <hr />
            <p>
                <strong>ID do Pedido:</strong> <code>@Model.RequestId</code>
            </p>
            <p class="text-muted small">
                Esta informação é útil para a equipa de desenvolvimento para rastrear o erro.
            </p>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="background-color: #8A2BE2; border-color: #8A2BE2;">
                Voltar à Página Principal
            </a>
        </div>
    </div>
</div>
