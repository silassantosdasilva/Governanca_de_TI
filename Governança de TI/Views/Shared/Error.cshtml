@model Governança_de_TI.Models.ErrorViewModel
@{
    ViewData["Title"] = "Erro Inesperado";
    // Usar o layout principal para consistência visual
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <h1 class="display-1 text-danger">Erro</h1>
            <h2 class="mt-4 mb-3">Ocorreu um erro inesperado.</h2>
            <p class="text-muted">
                Lamentamos pelo inconveniente. A nossa equipa técnica foi notificada e está a trabalhar para resolver o problema.
            </p>
            <p class="text-muted">
                Por favor, tente novamente mais tarde. Se o problema persistir, contacte o suporte.
            </p>

            @if (Model.ShowRequestId)
            {
                <p class="mt-4">
                    <small class="text-muted">ID da Requisição: <code>@Model.RequestId</code></small>
                </p>
            }

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="background-color:#8A2BE2;border-color:#8A2BE2;">
                    Voltar à Página Principal
                </a>
            </div>
        </div>
    </div>
</div>
