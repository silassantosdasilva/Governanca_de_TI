<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Governança de TI</title>

    <!-- Folhas de Estilo (CSS) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Secção para que as views possam adicionar os seus próprios estilos -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- [NOVO] HTML do Loader Personalizado -->
    <div id="global-loader">
        <div class="loader-ring"></div>
        <div class="loader-text">CARREGANDO...</div>
        <div class="loader-bar-container">
            <div class="loader-bar"></div>
        </div>
    </div>
    <!-- Fim do HTML do Loader -->

    <div class="page-container">
        <!-- Sidebar Fixa / Deslizante -->
        <nav class="sidebar">
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a asp-controller="Home" asp-action="Index" class="sidebar-nav-link" title="Dashboard"><i class="bi bi-house-door"></i></a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Relatórios"><i class="bi bi-bar-chart-line"></i></a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link has-submenu" title="Ferramentas"><i class="bi bi-tools"></i></a>
                    <div class="submenu-panel">
                        <h2>Ferramentas</h2>
                        <ul class="submenu-list">
                            <li>
                                <a asp-controller="Equipamentos" asp-action="Consulta" class="submenu-link"><i class="bi bi-hdd-stack"></i><span>Controle de Equipamentos</span></a>
                            </li>
                            <li>
                                <a asp-controller="Descarte" asp-action="Consulta" class="submenu-link"><i class="bi bi-trash2"></i><span>Gestão de Descarte</span></a>
                            </li>
                            <li>
                                <a asp-controller="ConsumoEnergia" asp-action="Index" class="submenu-link"><i class="bi bi-lightning-charge"></i><span>Registro de Consumo</span></a>
                            </li>
                            <li>
                                <a asp-controller="Usuario" asp-action="Index" class="submenu-link">
                                    <i class="bi bi-people"></i><span>Controle de Responsáveis</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Notificações"><i class="bi bi-bell"></i></a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Configurações"><i class="bi bi-gear"></i></a>
                </li>
            </ul>
        </nav>

        <!-- Container para Header e Conteúdo Principal -->
        <div class="main-wrapper">
            <header class="main-header d-flex justify-content-between align-items-center p-3 shadow-sm bg-white">

                <!-- [ALTERAÇÃO] Botão Hambúrguer (Visível apenas em mobile) -->
                <button id="sidebar-toggle" class="btn btn-outline-secondary d-lg-none">
                    <i class="bi bi-list fs-5"></i>
                </button>

                <div class="user-greeting d-flex align-items-center flex-grow-1">
                    @{
                        var nomeUsuario = User.FindFirst("FullName")?.Value ?? "Usuário";
                        var fotoClaim = User.FindFirst("FotoPerfil")?.Value;
                        var fotoSrc = !string.IsNullOrEmpty(fotoClaim)
                        ? $"data:image/png;base64,{fotoClaim}"
                        : Url.Content("~/img/default-user.png");
                    }
                    <img src="@fotoSrc" alt="Foto do Usuário"
                         class="user-avatar rounded-circle shadow-sm me-2"
                         style="width:40px;height:40px;object-fit:cover;border:1px solid #ddd;">
                    <div>
                        <h6 class="mb-0 fw-semibold">Olá, @nomeUsuario</h6>
                        <small class="text-muted">@User.Identity?.Name</small>
                    </div>
                </div>

                <div class="logout-section">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-box-arrow-right me-1"></i> Sair
                        </button>
                    </form>
                </div>
            </header>

            <main class="content-area p-4">
                @RenderBody()
            </main>
        </div>

        <!-- [ALTERAÇÃO] Overlay para o fundo da sidebar em mobile -->
        <div class="sidebar-overlay" id="sidebar-overlay"></div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- [NOVO] JavaScript para controlar o Loader -->
    <script>
        $(function () {
            var globalLoader = $('#global-loader');

            // Mostrar loader em requisições AJAX
            $(document).ajaxStart(function () {
                globalLoader.addClass('show');
            });

            // Esconder loader após requisições AJAX
            $(document).ajaxStop(function () {
                globalLoader.removeClass('show');
            });

            // Mostrar loader antes de uma navegação de página
            $(window).on('beforeunload', function () {
                globalLoader.addClass('show');
            });

            // Esconder loader quando a página for totalmente carregada
            $(window).on('load', function () {
                globalLoader.removeClass('show');
            });

            // Fallback para garantir que o loader é removido
            setTimeout(function() {
                globalLoader.removeClass('show');
            }, 5000);
        });
    </script>
    <!-- Fim do JavaScript do Loader -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

