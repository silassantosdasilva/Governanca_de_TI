@using Microsoft.AspNetCore.Http
@using System.Web
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechGreen</title>

    <!-- Bootstrap e Ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <!-- CSS do projeto -->
   @*  <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" /> *@

    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    <!-- Estilos de Notificação (mantidos) -->
    <style>
        .notification-dropdown {
            width: 340px;
            max-height: 450px;
            overflow-y: auto;
            border-radius: 0.75rem;
            border: none;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15);
            padding-top: 0;
            padding-bottom: 0;
        }

            .notification-dropdown .dropdown-header {
                background-color: #f8f9fa;
                border-bottom: 1px solid #e9ecef;
            }

            .notification-dropdown .dropdown-divider {
                margin: 0;
            }

        .notification-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1.25rem;
            border-bottom: 1px solid #e9ecef;
            transition: background-color 0.2s ease;
        }

            .notification-item:last-child {
                border-bottom: none;
            }

            .notification-item:hover {
                background-color: #f8f9fa;
            }

        .notification-icon {
            font-size: 1.1rem;
            width: 40px;
            height: 40px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-right: 1rem;
            flex-shrink: 0;
        }

            .notification-icon.text-warning {
                background-color: #fff8e1 !important;
                color: #ffc107 !important;
            }

            .notification-icon.text-success {
                background-color: #e6f7ec !important;
                color: #198754 !important;
            }

            .notification-icon.text-primary {
                background-color: #e8eaf6 !important;
                color: #8A2BE2 !important;
            }

        .notification-item .text-body {
            font-size: 0.9rem;
            margin-bottom: 0;
            white-space: normal;
            line-height: 1.4;
        }

        .notification-item .text-muted {
            font-size: 0.75rem;
        }
    </style>
</head>

<body class="bg-light">
    <!-- ===== LOADER TRANSLÚCIDO ROXO ===== -->
    <div id="global-loader">
        <div class="loader-ring"></div>
        <div class="loader-text">CARREGANDO...</div>
        <div class="loader-bar-container"><div class="loader-bar"></div></div>
    </div>

    <!-- ===== CONTAINER GERAL ===== -->
    <div class="page-container d-flex">

        <!-- ===== SIDEBAR ===== -->
        <nav class="sidebar shadow-sm">
            <!-- ===== HEADER / PERFIL ===== -->
            <div class="sidebar-header text-center py-4">
                <!-- Botão expandir/recolher -->
                <button type="button" class="btn btn-sm btn-light border-0 sidebar-collapse d-none d-lg-inline-flex" title="Expandir/recolher">
                    <i class="bi bi-chevron-double-left"></i>
                </button>

                <!-- Avatar e identidade -->
                <div class="sidebar-profile d-flex align-items-center flex-column mt-3">
                    <div class="avatar mb-2 position-relative">
                        @{
                            var fotoClaim = HttpContextAccessor.HttpContext?.User?.FindFirst("FotoPerfil")?.Value;
                            if (!string.IsNullOrEmpty(fotoClaim))
                            {
                                <img src="data:image/png;base64,@fotoClaim" alt="Avatar" class="avatar-img" />
                            }
                            else
                            {
                                <i class="bi bi-person-circle avatar-icon"></i>
                            }
                        }
                    </div>

                    @{
                        var nomeUsuario = HttpContextAccessor.HttpContext?.User?.FindFirst("FullName")?.Value ?? "Usuário";
                        var emailUsuario = HttpContextAccessor.HttpContext?.User?.Identity?.Name ?? "email@dominio.com";
                    }
                    <div class="identity text-center">
                        <span class="name fw-semibold">@nomeUsuario</span>
                        <span class="email text-muted small">@emailUsuario</span>
                    </div>
                </div>

                <h6 class="fw-bold brand-title mt-2 text-accent">TECHGREEN</h6>
            </div>

            <!-- ===== CAMPO DE BUSCA ===== -->
            <div class="sidebar-search">
                <i class="bi bi-search"></i>
                <input type="text" placeholder="Pesquisar...">
            </div>

            <!-- ===== MENU PRINCIPAL ===== -->
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a asp-controller="Home" asp-action="Index" class="sidebar-nav-link active">
                        <i class="bi bi-house"></i><span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link">
                        <i class="bi bi-bar-chart-line"></i><span>Relatórios</span>
                    </a>
                </li>

                <!-- Submenu de Ferramentas -->
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link has-submenu">
                        <i class="bi bi-tools"></i><span>Ferramentas</span>
                        <i class="bi bi-chevron-down ms-auto toggle-icon"></i>
                    </a>
                    <div class="submenu-panel">
                        <ul class="submenu-list">
                            <li>
                                <a asp-controller="Equipamentos" asp-action="Consulta" class="submenu-link">
                                    <i class="bi bi-hdd-stack"></i><span>Equipamentos</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Descarte" asp-action="Consulta" class="submenu-link">
                                    <i class="bi bi-trash2"></i><span>Descarte</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="ConsumoEnergia" asp-action="Index" class="submenu-link">
                                    <i class="bi bi-lightning-charge"></i><span>Consumo</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Usuario" asp-action="Index" class="submenu-link">
                                    <i class="bi bi-people"></i><span>Responsáveis</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>

            <!-- ===== RODAPÉ / OPÇÕES ===== -->
            <div class="sidebar-footer mt-auto">
                <ul class="sidebar-nav">
                    <li class="sidebar-nav-item">
                        <a href="#" class="sidebar-nav-link">
                            <i class="bi bi-question-circle"></i><span>Ajuda</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="sidebar-nav-link border-0 bg-transparent w-100 text-start">
                                <i class="bi bi-box-arrow-right"></i><span>Sair</span>
                            </button>
                        </form>
                    </li>
                </ul>

                <!-- Botão de Modo Escuro -->
                <div class="toggle-theme mt-3" id="darkModeToggle">
                    <i class="bi bi-moon"></i>
                    <span class="toggle-label">Modo Escuro</span>
                </div>
            </div>
        </nav>

        <!-- ===== CONTEÚDO PRINCIPAL ===== -->
        <div class="main-wrapper flex-grow-1">
            <!-- ===== HEADER MODERNO TECHGREEN ===== -->
            <header class="main-header bg-white shadow-sm d-flex align-items-center justify-content-between px-4 py-3">
                <!-- Botão Mobile -->
                <button id="sidebar-toggle" class="btn btn-outline-secondary d-lg-none">
                    <i class="bi bi-list fs-5"></i>
                </button>

                <!-- Nome do site centralizado -->
                <div class="header-title flex-grow-1 text-center">
                    <h5 class="fw-bold text-gradient mb-0">TechGreen</h5>
                </div>

                <!-- Ícones de ação (Configurações + Notificações) -->
                <div class="header-actions d-flex align-items-center gap-3">
                    <!-- Configurações -->
                    <a href="#" class="header-icon" title="Configurações">
                        <i class="bi bi-gear"></i>
                    </a>

                    <!-- Notificações -->
                    <div class="dropdown">
                        <a href="#" class="header-icon dropdown-toggle" id="notification-bell-icon"
                           data-bs-toggle="dropdown" aria-expanded="false" title="Notificações">
                            <i class="bi bi-bell"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 notification-dropdown"
                            aria-labelledby="notification-bell-icon">
                            <li><h6 class="dropdown-header text-primary fw-semibold">Central de Notificações</h6></li>
                            <li id="notification-loader" class="text-center p-4"><div class="spinner-border spinner-border-sm"></div></li>
                            <li id="notification-gamification-content"></li>
                            <li id="notification-equipamentos-content"></li>
                            <li id="notification-descartes-content"></li>
                            <li><hr class="dropdown-divider my-0"></li>
                            <li><a class="dropdown-item text-center text-muted small py-2" href="#">Ver todas as atividades</a></li>
                        </ul>
                    </div>
                </div>
            </header>

            <main class="content-area p-4">
                @RenderBody()
            </main>
        </div>

        <div class="sidebar-overlay" id="sidebar-overlay"></div>
    </div>

    <!-- TOAST GAMIFICAÇÃO -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index:1100">
        <div id="gamificationToast" class="toast gamification-toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
            <div class="toast-header">
                <i class="bi bi-star-fill text-warning me-2"></i>
                <strong class="me-auto">Parabéns!</strong>
                <small>agora</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Fechar"></button>
            </div>
            <div class="toast-body" id="gamificationToastBody">Mensagem de gamificação aqui.</div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>

          document.addEventListener("DOMContentLoaded", function () {
            const toggle = document.getElementById("darkModeToggle");
            const icon = toggle.querySelector("i");
            const label = document.getElementById("themeLabel");
            const body = document.body;

            // Pega o tema salvo no navegador
            const savedTheme = localStorage.getItem("theme") || "light";
            applyTheme(savedTheme);

            toggle.addEventListener("click", () => {
                const isDark = body.classList.contains("dark-mode");
                const newTheme = isDark ? "light" : "dark";
                applyTheme(newTheme);
                localStorage.setItem("theme", newTheme);
            });

            function applyTheme(theme) {
                body.classList.remove("light-mode", "dark-mode");
                body.classList.add(`${theme}-mode`);

                if (theme === "dark") {
                    icon.classList.replace("bi-moon", "bi-sun");
                    label.textContent = "Modo Claro";
                } else {
                    icon.classList.replace("bi-sun", "bi-moon");
                    label.textContent = "Modo Escuro";
                }
            }
        });


        (function ($) {
          'use strict';

          // ================================================
          // TECHGREEN SIDEBAR - VERSÃO FINAL (2025)
          // ================================================
          const $sidebar       = $('.sidebar');
          const $collapseBtn   = $('.sidebar-collapse');
          const $mobileToggle  = $('#sidebar-toggle');
          const $overlay       = $('#sidebar-overlay');
          const $doc           = $(document);

          const CLASS_EXPANDED = 'sidebar-expanded';
          const CLASS_OPEN     = 'is-open';

          // ============================
          // FUNÇÕES BASE
          // ============================
        function expandSidebar() {
          $sidebar.addClass(CLASS_EXPANDED);
          // Garante que o ícone mude visualmente
          $collapseBtn.find('i')
            .removeClass('bi-chevron-double-right')
            .addClass('bi-chevron-double-left');
        }

        function collapseSidebar() {
          $sidebar.removeClass(CLASS_EXPANDED);
          closeAllSubmenus();
          // Atualiza o ícone ao recolher
          $collapseBtn.find('i')
            .removeClass('bi-chevron-double-left')
            .addClass('bi-chevron-double-right');
        }

          function openMobileSidebar() {
            $sidebar.addClass(CLASS_OPEN);
            $overlay.addClass('is-visible');
          }

          function closeMobileSidebar() {
            $sidebar.removeClass(CLASS_OPEN);
            $overlay.removeClass('is-visible');
          }

          function toggleChevron($link, isOpen) {
            const $icon = $link.find('.submenu-chevron i');
            if ($icon.length) {
              $icon.toggleClass('bi-chevron-down', !isOpen);
              $icon.toggleClass('bi-chevron-up', isOpen);
            }
          }

          function closeAllSubmenus() {
            $('.sidebar-nav-item.active')
              .removeClass('active')
              .find('.submenu-panel')
              .stop(true, true)
              .slideUp(150)
              .prev('.sidebar-nav-link.has-submenu')
              .each(function () {
                toggleChevron($(this), false);
              });
          }

          // ============================
          // ESTADO INICIAL
          // ============================
          $('.submenu-panel').hide();
          $('.sidebar-nav-item').removeClass('active');

          // ============================
          // EVENTOS
          // ============================

          // 1️⃣ Botão de recolher (Desktop << >>)
          $collapseBtn.on('click', function (e) {
            e.preventDefault();
            e.stopPropagation();
            $sidebar.toggleClass(CLASS_EXPANDED);
            $(this).find('i').toggleClass('bi-chevron-double-left bi-chevron-double-right');
            if (!$sidebar.hasClass(CLASS_EXPANDED)) closeAllSubmenus();
          });

          // 2️⃣ Toggle Mobile (Hamburger)
          $mobileToggle.on('click', function (e) {
            e.preventDefault();
            e.stopPropagation();
            if ($sidebar.hasClass(CLASS_OPEN)) closeMobileSidebar();
            else openMobileSidebar();
          });

          // 3️⃣ Overlay fecha Mobile
          $overlay.on('click', () => closeMobileSidebar());

          // 4️⃣ Clique em botão principal (Dashboard, Ferramentas etc)
          $doc.on('click', '.sidebar-nav-link', function (e) {
            const $link = $(this);
            const $item = $link.closest('.sidebar-nav-item');
            const $submenu = $item.children('.submenu-panel');

            // Se for submenu
            if ($link.hasClass('has-submenu')) {
              e.preventDefault();
              e.stopPropagation();

              // Expande sidebar se estiver recolhido
              if (!$sidebar.hasClass(CLASS_EXPANDED)) {
                expandSidebar();
              }

              const isActive = $item.hasClass('active');

              // Fecha todos os outros
              closeAllSubmenus();

              if (!isActive) {
                $item.addClass('active');
                $submenu.stop(true, true).slideDown(200);
                toggleChevron($link, true);
              } else {
                $item.removeClass('active');
                $submenu.stop(true, true).slideUp(200);
                toggleChevron($link, false);
              }
            }
            // Se for item sem submenu (Dashboard etc)
            else {
              expandSidebar();
              closeAllSubmenus();
            }
          });

          // 5️⃣ Clique fora do Sidebar (fecha tudo)
          $doc.on('click', function (e) {
            const clickInside = $(e.target).closest('.sidebar').length > 0;
            const clickMobileBtn = $(e.target).closest('#sidebar-toggle').length > 0;

            if (!clickInside && !clickMobileBtn) {
              closeAllSubmenus();
              if ($sidebar.hasClass(CLASS_EXPANDED)) collapseSidebar();
              if ($sidebar.hasClass(CLASS_OPEN)) closeMobileSidebar();
            }
          });

          // 6️⃣ Impede fechamento ao clicar dentro do submenu
          $doc.on('click', '.submenu-panel', function (e) {
            e.stopPropagation();
          });

          // 7️⃣ Expor funções globais (opcional)
          window.TGSidebar = {
            expandSidebar,
            collapseSidebar,
            openMobileSidebar,
            closeMobileSidebar,
            closeAllSubmenus
          };

        })(jQuery);


        // ======== DARK MODE - AJUSTE FINAL ========
        const $darkToggle = $('#darkModeToggle');
        $darkToggle.on('click', function () {
          $('body').toggleClass('dark-mode');
          const isDark = $('body').hasClass('dark-mode');
          const $icon = $(this).find('i');

          // Alterna ícone e texto
          if (isDark) {
            $icon.removeClass('bi-moon').addClass('bi-brightness-high');
            $(this).find('.toggle-label').text('Modo Claro');
          } else {
            $icon.removeClass('bi-brightness-high').addClass('bi-moon');
            $(this).find('.toggle-label').text('Modo Escuro');
          }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
