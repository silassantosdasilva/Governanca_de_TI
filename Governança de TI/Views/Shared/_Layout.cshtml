    <!-- =========================================================
         JS DO LAYOUT
         - Tema (Bootstrap data-bs-theme + localStorage)
         - Sidebar (expandir/recolher, mobile, submenu)
         ========================================================= -->
    <script>
       document.addEventListener("DOMContentLoaded", function () {

            const btnAbrirLogs = document.getElementById("btnAbrirLogs");
            const logsContainer = document.getElementById("logsContainer");
            const btnLimparLogs = document.getElementById("btnLimparLogs");
            const modalLogs = new bootstrap.Modal(document.getElementById("logsModal"));

            if (btnAbrirLogs) {
                btnAbrirLogs.addEventListener("click", async (e) => {
                    e.preventDefault();
                    logsContainer.innerHTML = `
                        <div class="text-center text-muted py-5">
                            <div class="spinner-border text-primary mb-2"></div><br/>
                            Carregando registros de log...
                        </div>`;
                    modalLogs.show();

                    try {
                        const resp = await fetch("/Logs/ListarUltimos");
                        if (!resp.ok) throw new Error("Erro ao carregar logs.");
                        const html = await resp.text();
                        logsContainer.innerHTML = html;
                    } catch (err) {
                        logsContainer.innerHTML = `<div class="alert alert-danger text-center">${err.message}</div>`;
                    }
                });
            }

            if (btnLimparLogs) {
                btnLimparLogs.addEventListener("click", async () => {
                    if (!confirm("Deseja realmente apagar todos os logs?")) return;
                    try {
                         const resp = await fetch("/Logs/Limpar", { method: "POST" })
                        if (resp.ok) {
                            logsContainer.innerHTML = `<div class="alert alert-success text-center">Logs apagados com sucesso.</div>`;
                        } else {
                            throw new Error("Erro ao apagar logs.");
                        }
                    } catch {
                        logsContainer.innerHTML = `<div class="alert alert-danger text-center">Falha ao apagar logs.</div>`;
                    }
                });
            }
        });

        window.addEventListener("beforeunload", () => {
         document.getElementById("global-loader").classList.add("show");
        });
        window.addEventListener("load", () => {
            document.getElementById("global-loader").classList.remove("show");
        });
        // ===========================
        // THEME (Bootstrap 5.3)
        // ===========================
        document.addEventListener("DOMContentLoaded", function () {
            const toggle = document.getElementById("darkModeToggle");
            const icon = toggle.querySelector("i");
            const label = toggle.querySelector(".toggle-label");
            const htmlTag = document.documentElement;

            // Recupera o tema salvo (default: light)
            const savedTheme = localStorage.getItem("theme") || "light";
            applyTheme(savedTheme);

            toggle.addEventListener("click", () => {
                const next = htmlTag.getAttribute("data-bs-theme") === "dark" ? "light" : "dark";
                applyTheme(next);
                localStorage.setItem("theme", next);
            });

            function applyTheme(theme) {
                htmlTag.setAttribute("data-bs-theme", theme);
                if (theme === "dark") {
                    icon.classList.replace("bi-moon", "bi-brightness-high");
                    label.textContent = "Modo Claro";
                } else {
                    icon.classList.replace("bi-brightness-high", "bi-moon");
                    label.textContent = "Modo Escuro";
                }
            }
        });

        // ===========================
        // SIDEBAR (Desktop + Mobile)
        // ===========================
        (function ($) {
            'use strict';

            // Referências
            const $sidebar      = $('.sidebar');
            const $collapseBtn  = $('.sidebar-collapse');
            const $mobileToggle = $('#sidebar-toggle');
            const $overlay      = $('#sidebar-overlay');
            const $doc          = $(document);

            // Classes de estado
            const CLASS_EXPANDED = 'sidebar-expanded';
            const CLASS_OPEN     = 'is-open';

            // --------- Funções base ----------
            function expandSidebar() {
                $sidebar.addClass(CLASS_EXPANDED);
                $collapseBtn.find('i').removeClass('bi-chevron-double-right').addClass('bi-chevron-double-left');
            }

            function collapseSidebar() {
                $sidebar.removeClass(CLASS_EXPANDED);
                closeAllSubmenus();
                $collapseBtn.find('i').removeClass('bi-chevron-double-left').addClass('bi-chevron-double-right');
            }

            function openMobileSidebar() {
                $sidebar.addClass(CLASS_OPEN);
                $overlay.addClass('is-visible');
            }

            function closeMobileSidebar() {
                $sidebar.removeClass(CLASS_OPEN);
                $overlay.removeClass('is-visible');
            }

            function toggleChevron($link, isOpen) {
                const $icon = $link.find('.toggle-icon');
                if ($icon.length) {
                    $icon.toggleClass('bi-chevron-down', !isOpen);
                    $icon.toggleClass('bi-chevron-up', isOpen);
                }
            }

            function closeAllSubmenus() {
                $('.sidebar-nav-item.active')
                    .removeClass('active')
                    .find('.submenu-panel')
                    .stop(true, true)
                    .slideUp(150)
                    .prev('.sidebar-nav-link.has-submenu')
                    .each(function () { toggleChevron($(this), false); });
            }

            // Estado inicial
            $('.submenu-panel').hide();
            $('.sidebar-nav-item').removeClass('active');

            // Botão recolher/expandir (desktop)
            $collapseBtn.on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                $sidebar.toggleClass(CLASS_EXPANDED);
                $(this).find('i').toggleClass('bi-chevron-double-left bi-chevron-double-right');
                if (!$sidebar.hasClass(CLASS_EXPANDED)) closeAllSubmenus();
            });

            // Toggle Mobile (hamburger)
            $mobileToggle.on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                if ($sidebar.hasClass(CLASS_OPEN)) closeMobileSidebar();
                else openMobileSidebar();
            });

            // Overlay fecha Mobile
            $overlay.on('click', () => closeMobileSidebar());

            // Clique em itens do menu
            $doc.on('click', '.sidebar-nav-link', function (e) {
                const $link = $(this);
                const $item = $link.closest('.sidebar-nav-item');
                const $submenu = $item.children('.submenu-panel');

                if ($link.hasClass('has-submenu')) {
                    e.preventDefault();
                    e.stopPropagation();

                    // Garante expansão no desktop ao abrir submenu
                    if (!$sidebar.hasClass(CLASS_EXPANDED)) {
                        expandSidebar();
                    }

                    const isActive = $item.hasClass('active');
                    closeAllSubmenus();

                    if (!isActive) {
                        $item.addClass('active');
                        $submenu.stop(true, true).slideDown(200);
                        toggleChevron($link, true);
                    } else {
                        $item.removeClass('active');
                        $submenu.stop(true, true).slideUp(200);
                        toggleChevron($link, false);
                    }
                } else {
                    // Itens simples: mantém padrão de expandir e fechar submenus
                    expandSidebar();
                    closeAllSubmenus();
                }
            });

            // Clique fora fecha tudo (desktop + mobile)
            $doc.on('click', function (e) {
                const clickInsideSidebar = $(e.target).closest('.sidebar').length > 0;
                const clickHamburger = $(e.target).closest('#sidebar-toggle').length > 0;

                if (!clickInsideSidebar && !clickHamburger) {
                    closeAllSubmenus();
                    if ($sidebar.hasClass(CLASS_EXPANDED)) collapseSidebar();
                    if ($sidebar.hasClass(CLASS_OPEN)) closeMobileSidebar();
                }
            });

            // Impede fechamento ao clicar dentro do submenu
            $doc.on('click', '.submenu-panel', function (e) { e.stopPropagation(); });

            // Expor utilitários globais (opcional)
            window.TGSidebar = { expandSidebar, collapseSidebar, openMobileSidebar, closeMobileSidebar, closeAllSubmenus };
        })(jQuery);
                document.addEventListener("DOMContentLoaded", () => {
            const loader = document.getElementById("global-loader");
            if (loader) {
                // Mostra brevemente e oculta após 800ms
                loader.classList.add("show");
                setTimeout(() => {
                    loader.classList.remove("show");
                    loader.style.display = "none";
                }, 800);
            }
        });
          // ===== LOADER GLOBAL =====
        document.addEventListener("DOMContentLoaded", () => {
            const loader = document.getElementById("global-loader");
            if (loader) {
                // Mostra brevemente e oculta após 800ms
                loader.classList.add("active");
                setTimeout(() => {
                    loader.classList.remove("active");
                }, 800);
            }
        });

        function showLoader() {
            const loader = document.getElementById("global-loader");
            loader.classList.add("active");
        }

        function hideLoader() {
            const loader = document.getElementById("global-loader");
            loader.classList.remove("active");
        }

        // Exibe durante carregamentos de página
        window.addEventListener("beforeunload", showLoader);
        window.addEventListener("load", hideLoader);

        window.showFeedbackModal = function (type, message) {
            const icon = document.getElementById("feedbackIcon");
            const msg = document.getElementById("feedbackMessage");
            const modalEl = document.getElementById("feedbackModal");

            // Define ícone e cor
            switch (type) {
                case "success":
                    icon.innerHTML = '<i class="bi bi-check-circle-fill text-success"></i>';
                    break;
                case "error":
                    icon.innerHTML = '<i class="bi bi-x-circle-fill text-danger"></i>';
                    break;
                case "warning":
                    icon.innerHTML = '<i class="bi bi-exclamation-triangle-fill text-warning"></i>';
                    break;
                default:
                    icon.innerHTML = '<i class="bi bi-info-circle-fill text-primary"></i>';
                    break;
            }

            msg.textContent = message;

            const modal = new bootstrap.Modal(modalEl);
            modal.show();

            setTimeout(() => modal.hide(), 2500);
        };
              // ===== SOM SUAVE =====
        const feedbackSound = new Audio('/sounds/notification.mp3');

        window.showFeedbackModal = function (type, message) {
            const icon = document.getElementById("feedbackIcon");
            const msg = document.getElementById("feedbackMessage");
            const modalEl = document.getElementById("feedbackModal");

            switch (type) {
                case "success": icon.innerHTML = '<i class="bi bi-check-circle-fill text-success"></i>'; break;
                case "error": icon.innerHTML = '<i class="bi bi-x-circle-fill text-danger"></i>'; break;
                case "warning": icon.innerHTML = '<i class="bi bi-exclamation-triangle-fill text-warning"></i>'; break;
                default: icon.innerHTML = '<i class="bi bi-info-circle-fill text-primary"></i>'; break;
            }

            msg.textContent = message;

            const modal = new bootstrap.Modal(modalEl);
            modal.show();
            feedbackSound.currentTime = 0;
            feedbackSound.play().catch(() => {});

            setTimeout(() => modal.hide(), 2600);
        };

        // ===== FEEDBACK VIA TEMPDATA =====
        @if (TempData["SuccessMessage"] != null)
        {
                <text>document.addEventListener('DOMContentLoaded',()=>{showFeedbackModal('success','@TempData["SuccessMessage"]');});</text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
                <text>document.addEventListener('DOMContentLoaded',()=>{showFeedbackModal('error','@TempData["ErrorMessage"]');});</text>
        }
        @if (TempData["WarningMessage"] != null)
        {
                <text>document.addEventListener('DOMContentLoaded',()=>{showFeedbackModal('warning','@TempData["WarningMessage"]');});</text>
        }



    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
