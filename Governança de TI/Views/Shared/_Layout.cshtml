<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Governança de TI</title>

    <!-- Folhas de Estilo (CSS) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Secção para que as views possam adicionar os seus próprios estilos (Ex: equipamento.css) -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="page-container">
        <!-- Sidebar Fixa -->
        <nav class="sidebar">
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a asp-controller="Home" asp-action="Index" class="sidebar-nav-link" title="Dashboard"><i class="bi bi-house-door"></i></a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Relatórios"><i class="bi bi-bar-chart-line"></i></a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link has-submenu" title="Ferramentas"><i class="bi bi-tools"></i></a>
                    <div class="submenu-panel">
                        <h2>Ferramentas</h2>
                        <ul class="submenu-list">
                            <li>
                                <a asp-controller="Equipamentos" asp-action="Consulta" class="submenu-link"><i class="bi bi-hdd-stack"></i><span>Controle de Equipamentos</span></a>
                            </li>
                            <li>
                                <a asp-controller="Descarte" asp-action="Consulta" class="submenu-link"><i class="bi bi-trash2"></i><span>Gestão de Descarte</span></a>
                            </li>
                            <li>
                                <a asp-controller="ConsumoEnergia" asp-action="Index" class="submenu-link"><i class="bi bi-lightning-charge"></i><span>Registro de Consumo</span></a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Notificações"><i class="bi bi-bell"></i></a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Configurações"><i class="bi bi-gear"></i></a>
                </li>
            </ul>
        </nav>

        <!-- Container para Header e Conteúdo Principal -->
        <div class="main-wrapper">
            <header class="main-header">
                <div class="user-greeting">
                    <img src="https://i.pravatar.cc/40?img=1" alt="Avatar do Utilizador" class="user-avatar">
                    <h5 class="mb-0">Olá Olivia</h5>
                </div>
            </header>

            <!-- A área principal onde o conteúdo de cada página será renderizado -->
            <main class="content-area">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Secção para que as views possam adicionar os seus próprios scripts (Ex: scripts de validação) -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

