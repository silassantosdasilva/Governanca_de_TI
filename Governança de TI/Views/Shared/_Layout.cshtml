@using Microsoft.AspNetCore.Http
@using System.Web
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechGreen</title>

    <!-- Bootstrap e Ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <!-- CSS do projeto -->
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

    <!-- Estilo leve do dropdown de notificações -->
    <style>
        .notification-dropdown {
            width: 340px;
            max-height: 450px;
            overflow-y: auto;
            border-radius: 0.75rem;
            border: none;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15);
        }

            .notification-dropdown .dropdown-header {
                background-color: #f8f9fa;
                border-bottom: 1px solid #e9ecef;
            }

        .notification-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1.25rem;
            border-bottom: 1px solid #e9ecef;
            transition: background-color .2s;
        }

            .notification-item:hover {
                background-color: #f8f9fa;
            }

        .notification-icon {
            font-size: 1.1rem;
            width: 40px;
            height: 40px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-right: 1rem;
            flex-shrink: 0;
        }

            .notification-icon.text-warning {
                background: #fff8e1 !important;
                color: #ffc107 !important;
            }

            .notification-icon.text-success {
                background: #e6f7ec !important;
                color: #198754 !important;
            }

            .notification-icon.text-primary {
                background: #e8eaf6 !important;
                color: #8A2BE2 !important;
            }
    </style>
</head>
<body>

    <!-- ========================================================= -->
    <!-- 🧾 MODAL DE LOGS DO SISTEMA -->
    <!-- ========================================================= -->
    <div class="modal fade" id="logsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content shadow border-0 rounded-4">
                <div class="modal-header bg-light">
                    <h5 class="modal-title">
                        <i class="bi bi-journal-text me-2"></i> Logs do Sistema
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body p-3" id="logsContainer">
                    <div class="text-center text-muted py-5">
                        <div class="spinner-border text-primary mb-2"></div><br />
                        Carregando registros de log...
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <small class="text-muted">Exibindo registros mais recentes</small>
                    <button id="btnLimparLogs" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Apagar Todos
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- ===== LOADER TRANSLÚCIDO ROXO ===== -->
    <div id="global-loader">
        <div class="loader-ring"></div>
        <div class="loader-text">CARREGANDO...</div>
        <div class="loader-bar-container">
            <div class="loader-bar"></div>
        </div>
    </div>

    <!-- ===== CONTAINER GERAL ===== -->
    <div class="page-container d-flex">

        <!-- ===== SIDEBAR ===== -->
        <nav class="sidebar shadow-sm">
            <div class="sidebar-header text-center py-4">
                <button type="button" class="btn btn-sm btn-light border-0 sidebar-collapse d-none d-lg-inline-flex" title="Expandir/recolher">
                    <i class="bi bi-chevron-double-left"></i>
                </button>

                <div class="sidebar-profile d-flex align-items-center flex-column mt-3">
                    <div class="avatar mb-2 position-relative text-center">
                        @{
                            var caminhoFoto = HttpContextAccessor.HttpContext?.User?.FindFirst("CaminhoFotoPerfil")?.Value;
                            var fotoSrc = string.IsNullOrWhiteSpace(caminhoFoto)
                            ? Url.Content("~/img/default-user.png")
                            : Url.Content(caminhoFoto.StartsWith("/") ? caminhoFoto : "/" + caminhoFoto);
                            fotoSrc += $"?v={DateTime.UtcNow.Ticks}";
                        }
                        <img src="@fotoSrc"
                             alt="Foto de perfil"
                             class="sidebar-avatar rounded-circle border border-2 border-light shadow-sm" />
                    </div>

                    @{
                        var nomeUsuario = HttpContextAccessor.HttpContext?.User?.FindFirst("FullName")?.Value ?? "Usuário";
                        var emailUsuario = HttpContextAccessor.HttpContext?.User?.Identity?.Name ?? "email@dominio.com";
                    }
                    <div class="identity text-center">
                        <span class="name fw-semibold">@nomeUsuario</span>
                        <span class="email text-muted small">@emailUsuario</span>
                    </div>
                </div>

                <h6 class="fw-bold brand-title mt-2 text-accent">TECHGREEN</h6>
            </div>

            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a asp-controller="Home" asp-action="Index" class="sidebar-nav-link active">
                        <i class="bi bi-house"></i><span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a asp-controller="DashboardDinamica" asp-action="Index" class="sidebar-nav-link">
                        <i class="bi bi-bar-chart-line"></i>
                        <span>Relatórios Dinâmicos</span>
                    </a>
                </li>

                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link has-submenu">
                        <i class="bi bi-tools"></i><span>Ferramentas</span>
                        <i class="bi bi-chevron-down ms-auto toggle-icon"></i>
                    </a>
                    <div class="submenu-panel">
                        <ul class="submenu-list">
                            <li><a asp-controller="Equipamentos" asp-action="Consulta" class="submenu-link"><i class="bi bi-hdd-stack"></i><span>Equipamentos</span></a></li>
                            <li><a asp-controller="Descarte" asp-action="Consulta" class="submenu-link"><i class="bi bi-trash2"></i><span>Descarte</span></a></li>
                            <li><a asp-controller="ConsumoEnergia" asp-action="Index" class="submenu-link"><i class="bi bi-lightning-charge"></i><span>Consumo</span></a></li>
                            <li><a asp-controller="Usuario" asp-action="Index" class="submenu-link"><i class="bi bi-people"></i><span>Responsáveis</span></a></li>
                        </ul>
                    </div>
                </li>
            </ul>

            <div class="sidebar-footer mt-auto">
                <ul class="sidebar-nav">
                    <li class="sidebar-nav-item">
                        <a href="#" class="sidebar-nav-link">
                            <i class="bi bi-question-circle"></i><span>Ajuda</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="sidebar-nav-link border-0 bg-transparent w-100 text-start">
                                <i class="bi bi-box-arrow-right"></i><span>Sair</span>
                            </button>
                        </form>
                    </li>
                </ul>
                <div class="toggle-theme mt-3" id="darkModeToggle">
                    <i class="bi bi-moon"></i>
                    <span class="toggle-label">Modo Escuro</span>
                </div>
            </div>
        </nav>

        <!-- ===== CONTEÚDO PRINCIPAL ===== -->
        <div class="main-wrapper flex-grow-1">
            <header class="main-header bg-white shadow-sm d-flex align-items-center justify-content-between px-4 py-3">
                <button id="sidebar-toggle" class="btn btn-outline-secondary d-lg-none">
                    <i class="bi bi-list fs-5"></i>
                </button>
                <div class="header-title flex-grow-1 text-center">
                    <h5 class="fw-bold text-gradient mb-0">TechGreen</h5>
                </div>

                <!-- ========================================================= -->
                <!-- ⚙️ MENU DE CONFIGURAÇÕES / LOGS -->
                <!-- ========================================================= -->
                <div class="header-actions d-flex align-items-center gap-3">
                    <div class="dropdown">
                        <a href="#" class="header-icon dropdown-toggle" id="configDropdown"
                           data-bs-toggle="dropdown" aria-expanded="false" title="Configurações">
                            <i class="bi bi-gear"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                            <li>
                                <a class="dropdown-item" asp-controller="DashboardDinamica" asp-action="Index">
                                    <i class="bi bi-bar-chart-line me-2 text-primary"></i> Relatórios Dinâmicos
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Account/Perfil">
                                    <i class="bi bi-person-gear me-2 text-secondary"></i> Configurar Perfil
                                </a>
                            </li>
                            @if (HttpContextAccessor.HttpContext?.User?.FindFirst("Perfil")?.Value == "Admin")
                            {
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <!-- Botão que abre o modal de logs -->
                                    <a href="#" class="dropdown-item text-danger" id="btnAbrirLogs">
                                        <i class="bi bi-journal-text me-2"></i> Logs do Sistema
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- 🔔 Notificações -->
                    <div class="dropdown">
                        <a href="#" class="header-icon dropdown-toggle" id="notification-bell-icon"
                           data-bs-toggle="dropdown" aria-expanded="false" title="Notificações">
                            <i class="bi bi-bell"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 notification-dropdown"
                            aria-labelledby="notification-bell-icon">
                            <li><h6 class="dropdown-header text-primary fw-semibold">Central de Notificações</h6></li>
                            <li id="notification-loader" class="text-center p-4"><div class="spinner-border spinner-border-sm"></div></li>
                            <li id="notification-gamification-content"></li>
                            <li id="notification-equipamentos-content"></li>
                            <li id="notification-descartes-content"></li>
                            <li><hr class="dropdown-divider my-0"></li>
                            <li><a class="dropdown-item text-center text-muted small py-2" href="#">Ver todas as atividades</a></li>
                        </ul>
                    </div>
                </div>

            
            </header>

            <main class="content-area p-4">
                @RenderBody()
            </main>
        </div>

        <div class="sidebar-overlay" id="sidebar-overlay"></div>
    </div>

    <!-- ======= TOAST GLOBAL DE GAMIFICAÇÃO ======= -->
    <div id="toastGamificacao"
         class="toast align-items-center text-white bg-success border-0 position-fixed bottom-0 end-0 m-4"
         role="alert"
         aria-live="assertive"
         aria-atomic="true"
         style="z-index: 99999; display:none;">
        <div class="d-flex">
            <div class="toast-body fw-semibold">
                <span id="toastGamificacaoMessage">Notificação</span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    onclick="$('#toastGamificacao').hide();"></button>
        </div>
    </div>

    @* ===== MODAL GLOBAL DE FEEDBACK ===== *@
    <div class="modal fade" id="feedbackModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center border-0 shadow-lg rounded-4 p-4">
                <div id="feedbackIcon" class="fs-1 mb-3"></div>
                <h5 id="feedbackMessage" class="fw-semibold"></h5>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/WizardModal.js" asp-append-version="true"></script> 
    <script src="~/js/globalErrorLogger.js"></script>
    <script src="~/js/validacao-global.js" asp-append-version="true"></script>
