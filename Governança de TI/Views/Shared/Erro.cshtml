@model Governança_de_TI.Models.ErrorViewModel
@{
    ViewData["Title"] = "Erro Inesperado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <h1 class="display-1 text-danger fw-bold">Ops!</h1>
            <h3 class="mt-3 mb-3">Ocorreu um erro inesperado.</h3>

            <p class="text-muted">
                A nossa equipe técnica já foi notificada e está trabalhando para resolver o problema.
            </p>

            <p class="text-muted">
                Tente novamente mais tarde. Caso persista, entre em contato com o suporte.
            </p>

            @if (Model?.ShowRequestId == true)
            {
                <p class="mt-3">
                    <small class="text-muted">
                        ID da Requisição: <code>@Model.RequestId</code>
                    </small>
                </p>
            }

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index"
                   class="btn btn-primary"
                   style="background-color:#8A2BE2;border-color:#8A2BE2;">
                    Voltar à Página Inicial
                </a>
            </div>
        </div>
    </div>
</div>
