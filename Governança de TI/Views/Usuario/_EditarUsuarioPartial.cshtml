@model Governança_de_TI.Models.UsuarioModel

<form id="formEditarUsuario" asp-action="Editar" enctype="multipart/form-data" method="post" class="p-2">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3 validation-summary-placeholder"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Senha" />
    <input type="hidden" asp-for="DataDeCadastro" />

    <!-- ===================== INFORMAÇÕES PRINCIPAIS ===================== -->
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Nome" class="form-label text-muted small mb-1">
                <i class="bi bi-person-circle me-1"></i>Nome
            </label>
            <input asp-for="Nome" class="form-control shadow-sm" placeholder="Digite o nome completo" />
            <span asp-validation-for="Nome" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label text-muted small mb-1">
                <i class="bi bi-envelope-at me-1"></i>Email
            </label>
            <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="exemplo@email.com" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>
    </div>

    <!-- ===================== DEPARTAMENTO ===================== -->
    <div class="mt-3">
        <label asp-for="DepartamentoId" class="form-label text-muted small mb-1">
            <i class="bi bi-building me-1"></i>Departamento
        </label>
        <div class="input-group">
            <select asp-for="DepartamentoId" class="form-select shadow-sm" asp-items="ViewBag.DepartamentoId" id="DepartamentoIdModalEditar"></select>
            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modalGerenciarDepartamentos" title="Adicionar novo departamento">
                <i class="bi bi-plus-lg"></i>
            </button>
        </div>
        <span asp-validation-for="DepartamentoId" class="text-danger small"></span>
    </div>

    <!-- ===================== PERFIL E STATUS ===================== -->
    <div class="row mt-3 g-3">
        <div class="col-md-6">
            <label asp-for="Perfil" class="form-label text-muted small mb-1">
                <i class="bi bi-person-gear me-1"></i>Perfil
            </label>
            <select asp-for="Perfil" class="form-select shadow-sm">
                <option value="">Selecione...</option>
                <option value="Admin">Administrador/TI</option>
                <option value="Usuario">Utilizador Comum</option>
            </select>
            <span asp-validation-for="Perfil" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Status" class="form-label text-muted small mb-1">
                <i class="bi bi-circle-half me-1"></i>Status
            </label>
            <select asp-for="Status" class="form-select shadow-sm">
                <option value="Ativo">Ativo</option>
                <option value="Inativo">Inativo</option>
            </select>
            <span asp-validation-for="Status" class="text-danger small"></span>
        </div>
    </div>

    <!-- ===================== FOTO DE PERFIL ===================== -->
    <hr class="my-4" />
    <div class="text-center">
        <label class="form-label d-block text-muted mb-2">
            <i class="bi bi-camera me-1"></i>Foto de Perfil
        </label>

        @{
            var fotoSrcEditar = "~/img/default-user.png";
            if (Model.FotoPerfil != null && Model.FotoPerfil.Length > 0)
            {
                fotoSrcEditar = $"data:image/png;base64,{Convert.ToBase64String(Model.FotoPerfil)}";
            }
        }

        <img id="previewImagemModalEditar"
             src="@Url.Content(fotoSrcEditar)"
             class="rounded-circle shadow-sm mb-3 border"
             style="width: 100px; height: 100px; object-fit: cover;" />

        <div class="d-flex justify-content-center">
            <input type="file" name="Imagem" id="inputImagemModalEditar" class="form-control form-control-sm w-75" accept="image/*" />
        </div>

        <small class="text-muted d-block mt-2">
            Carregue uma nova imagem apenas se desejar substituí-la.
        </small>
    </div>
</form>

<!-- ===================== SCRIPTS ===================== -->
<script>
    // Preview da imagem ao escolher arquivo
    const imageInput = document.getElementById('inputImagemModalEditar');
    const preview = document.getElementById('previewImagemModalEditar');

    if (imageInput && preview) {
        imageInput.addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = ev => preview.src = ev.target.result;
                reader.readAsDataURL(file);
            }
        });
    }

    // Remove obrigatoriedade do campo imagem na edição
    $('#inputImagemModalEditar').removeAttr('data-val-required');

    // Reativa validação jQuery Unobtrusive
    if ($.validator && $.validator.unobtrusive) {
        $.validator.unobtrusive.parse("#formEditarUsuario");
    }
</script>
