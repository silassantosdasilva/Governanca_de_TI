@using Governança_de_TI.Models.Usuario
@model UsuarioModel

<form id="formEditarUsuario" asp-action="Editar" enctype="multipart/form-data" method="post" class="p-2">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3 validation-summary-placeholder"></div>

    <!-- Campos ocultos necessários -->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Senha" />
    <input type="hidden" asp-for="DataDeCadastro" />
    <input type="hidden" asp-for="CaminhoFotoPerfil" />

    <!-- ===================== INFORMAÇÕES PRINCIPAIS ===================== -->
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Nome" class="form-label text-muted small mb-1">
                <i class="bi bi-person-circle me-1"></i>Nome
            </label>
            <input asp-for="Nome" class="form-control shadow-sm" placeholder="Digite o nome completo" />
            <span asp-validation-for="Nome" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label text-muted small mb-1">
                <i class="bi bi-envelope-at me-1"></i>Email
            </label>
            <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="exemplo@email.com" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>
    </div>

    <!-- ===================== DEPARTAMENTO ===================== -->
    <div class="mt-3">
        <label asp-for="DepartamentoId" class="form-label text-muted small mb-1">
            <i class="bi bi-building me-1"></i>Departamento
        </label>
        <div class="input-group">
            <select asp-for="DepartamentoId" class="form-select shadow-sm" asp-items="ViewBag.DepartamentoId" id="DepartamentoIdModalEditar"></select>
            <button type="button" class="btn btn-outline-secondary"
                    data-bs-toggle="modal"
                    data-bs-target="#modalGerenciarDepartamentos"
                    title="Adicionar novo departamento">
                <i class="bi bi-plus-lg"></i>
            </button>
        </div>
        <span asp-validation-for="DepartamentoId" class="text-danger small"></span>
    </div>

    <!-- ===================== PERFIL E STATUS ===================== -->
    <div class="row mt-3 g-3">
        <div class="col-md-6">
            <label asp-for="Perfil" class="form-label text-muted small mb-1">
                <i class="bi bi-person-gear me-1"></i>Perfil
            </label>
            <select asp-for="Perfil" class="form-select shadow-sm">
                <option value="">Selecione...</option>
                <option value="Admin">Administrador/TI</option>
                <option value="Usuario">Utilizador Comum</option>
            </select>
            <span asp-validation-for="Perfil" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Status" class="form-label text-muted small mb-1">
                <i class="bi bi-circle-half me-1"></i>Status
            </label>
            <select asp-for="Status" class="form-select shadow-sm">
                <option value="Ativo">Ativo</option>
                <option value="Inativo">Inativo</option>
            </select>
            <span asp-validation-for="Status" class="text-danger small"></span>
        </div>
    </div>

    <!-- ===================== FOTO DE PERFIL ===================== -->
    <hr class="my-4" />
    <div class="text-center">
        <label asp-for="FotoUpload" class="form-label d-block text-muted mb-2">
            <i class="bi bi-camera me-1"></i>Foto de Perfil
        </label>

        @{
            // Determina a imagem a ser exibida (cadastrada ou padrão)
            var fotoSrcEditar = string.IsNullOrEmpty(Model.CaminhoFotoPerfil)
            ? Url.Content("~/img/default-user.png")
            : Url.Content(Model.CaminhoFotoPerfil.StartsWith("/") ? Model.CaminhoFotoPerfil : "/" + Model.CaminhoFotoPerfil);
        }

        <img id="previewImagemModalEditar"
             src="@fotoSrcEditar"
             class="rounded-circle shadow-sm mb-3 border"
             style="width:100px;height:100px;object-fit:cover;transition:all 0.3s ease;" />

        <div class="d-flex justify-content-center">
            <input asp-for="FotoUpload"
                   type="file"
                   id="inputImagemModalEditar"
                   class="form-control form-control-sm w-75"
                   accept="image/*" />
        </div>

        <small class="text-muted d-block mt-2">
            Carregue uma nova imagem apenas se desejar substituí-la.<br />
            O sistema salvará automaticamente em <strong>wwwroot/perfil/perfil-X.jpg</strong>.
        </small>
    </div>
</form>

<!-- ===================== SCRIPT: Preview da Imagem ===================== -->
<script>
    const inputEditar = document.getElementById('inputImagemModalEditar');
    const previewEditar = document.getElementById('previewImagemModalEditar');

    // Atualiza preview quando o usuário escolhe nova imagem
    if (inputEditar && previewEditar) {
        inputEditar.addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = ev => previewEditar.src = ev.target.result;
                reader.readAsDataURL(file);
            }
        });
    }

    // Remove obrigatoriedade da imagem no modo edição
    $('#inputImagemModalEditar').removeAttr('data-val-required');

    // Reativa validação jQuery Unobtrusive (necessário em modais AJAX)
    if ($.validator && $.validator.unobtrusive) {
        $.validator.unobtrusive.parse("#formEditarUsuario");
    }
</script>
