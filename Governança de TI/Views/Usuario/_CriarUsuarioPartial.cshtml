@model Governança_de_TI.Models.UsuarioModel

<form id="formCriarUsuario" asp-action="Criar" enctype="multipart/form-data" method="post" class="p-2">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3 validation-summary-placeholder"></div>

    <!-- ===================== INFORMAÇÕES PRINCIPAIS ===================== -->
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Nome" class="form-label text-muted small mb-1">
                <i class="bi bi-person-circle me-1"></i>Nome
            </label>
            <input asp-for="Nome" class="form-control shadow-sm" placeholder="Digite o nome completo"  required/>
          
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label text-muted small mb-1">
                <i class="bi bi-envelope-at me-1"></i>Email
            </label>
            <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="exemplo@email.com" required />
         
        </div>
    </div>
    <style>

    </style>
    <div class="mb-2">
        <label class="form-label mb-2">Departamento</label>

        <div class="d-flex align-items-center gap-2">

            <!-- SELECT -->
            <div class="flex-grow-1">
                <select asp-for="DepartamentoId" class="form-select" id="DepartamentoId">
                    @foreach (var d in ViewBag.DepartamentoId)
                    {
                        <option value="@d.Value">@d.Text</option>
                    }
                </select>
            </div>

            <!-- Botão adicionar -->
            <button type="button" id="btnAddDepartamento"
                    class="btn btn-primary rounded-3 px-3"
                    style="background:#8A2BE2;border-color:#8A2BE2;">
                <i class="bi bi-plus-lg"></i>
            </button>

            <!-- Botão gerenciar -->
            <button id="btnGerenciarDepartamento"
                    type="button"
                    class="btn btn-secondary rounded-3 px-3">
                <i class="bi bi-gear"></i>
            </button>
        </div>
    </div>


    <!-- ===================== PERFIL E STATUS ===================== -->
    <div class="row mt-3 g-3">
        <div class="col-md-6">
            <label asp-for="Perfil" class="form-label text-muted small mb-1" required>
                <i class="bi bi-person-gear me-1"></i>Perfil
            </label>
            @Html.DropDownListFor(model => model.Perfil,
                        new List<SelectListItem> {
                        new SelectListItem { Value = "", Text = "Selecione..." },
                        new SelectListItem { Value = "Admin", Text = "Administrador/TI" },
                        new SelectListItem { Value = "Usuario", Text = "Utilizador Comum" }
                        },
                        new { @class = "form-select shadow-sm" })
        </div>

        <div class="col-md-6">
            <label asp-for="Status" class="form-label text-muted small mb-1" required>
                <i class="bi bi-circle-half me-1"></i>Status
            </label>
            @Html.DropDownListFor(model => model.Status,
                        new List<SelectListItem> {
                        new SelectListItem { Value = "Ativo", Text = "Ativo" },
                        new SelectListItem { Value = "Inativo", Text = "Inativo" }
                        },
                        new { @class = "form-select shadow-sm" })
            
        </div>
    </div>

    <!-- ===================== FOTO DE PERFIL ===================== -->
    <hr class="my-4" />
    <div class="text-center">
        <label asp-for="FotoUpload" class="form-label d-block text-muted mb-2">
            <i class="bi bi-camera me-1"></i>Foto de Perfil
        </label>

        <!-- Pré-visualização -->
        <img id="previewImagemModal"
             src="~/img/default-user.png"
             class="rounded-circle shadow-sm border mb-3"
             style="width:100px; height:100px; object-fit:cover;" />

        <div class="d-flex justify-content-center">
            <input asp-for="FotoUpload"
                   type="file"
                   class="form-control form-control-sm w-75"
                   accept="image/*"
                   id="inputImagemModal" />
        </div>

        <small class="text-muted d-block mt-2">
            A imagem será salva automaticamente em <strong>wwwroot/perfil/perfil-X.jpg</strong>
        </small>
    </div>

    <!-- ===================== AVISO SOBRE SENHA ===================== -->
    <div class="alert alert-info small mt-4 mb-0 shadow-sm" role="alert">
        <i class="bi bi-info-circle me-1"></i>
        Uma senha aleatória será gerada e enviada para o e-mail do utilizador.
    </div>
</form>

<!-- ===================== SCRIPT: Preview da Imagem ===================== -->
<script>
    const inputImg = document.getElementById('inputImagemModal');
    const previewImg = document.getElementById('previewImagemModal');

    if (inputImg && previewImg) {
        inputImg.addEventListener('change', e => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = ev => previewImg.src = ev.target.result;
                reader.readAsDataURL(file);
            }
        });
    }

    // Reativa validação jQuery Unobtrusive (em recarregamentos AJAX)
    if ($.validator && $.validator.unobtrusive) {
        $.validator.unobtrusive.parse("#formCriarUsuario");
    }

        // ============================================================
    // ⚙ GERENCIAR DEPARTAMENTOS
    // ============================================================
    $(document).on("click", "#btnGerenciarDepartamento", function () {

        const modal = new bootstrap.Modal(document.getElementById("departamentoModal"));
        const body = $("#departamentoModalBody");
        const btnSalvar = $("#btnSalvarDepartamento");

        body.html(`
            <div class='text-center p-4'>
                <div class='spinner-border text-primary'></div>
                <p class='mt-3 text-muted'>Carregando...</p>
            </div>`);

        modal.show();

        $.get("/Departamento/_GerenciarDepartamentoModal")
            .done(function (html) {
                body.hide().html(html).fadeIn(200);
            })
            .fail(function () {
                body.html("<div class='alert alert-danger'>Erro ao carregar departamentos.</div>");
            });

        // Em modo gerenciar, o botão salvar não é usado
        btnSalvar.hide();
    });

</script>
