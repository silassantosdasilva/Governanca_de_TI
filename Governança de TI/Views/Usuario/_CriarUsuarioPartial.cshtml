@model Governança_de_TI.Models.UsuarioModel

<form id="formCriarUsuario" asp-action="Criar" enctype="multipart/form-data" method="post" class="p-2">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3 validation-summary-placeholder"></div>

    <!-- ===================== INFORMAÇÕES PRINCIPAIS ===================== -->
    <div class="row g-3">
        <div class="col-md-6">
            <label for="Nome" class="form-label text-muted small mb-1">
                <i class="bi bi-person-circle me-1"></i>Nome
            </label>
            @Html.TextBox("Nome", null, new { @class = "form-control shadow-sm", placeholder = "Digite o nome completo" })
            @Html.ValidationMessage("Nome", null, new { @class = "text-danger small" })
        </div>

        <div class="col-md-6">
            <label for="Email" class="form-label text-muted small mb-1">
                <i class="bi bi-envelope-at me-1"></i>Email
            </label>
            @Html.TextBox("Email", null, new { @class = "form-control shadow-sm", type = "email", placeholder = "exemplo@email.com" })
            @Html.ValidationMessage("Email", null, new { @class = "text-danger small" })
        </div>
    </div>

    <!-- ===================== DEPARTAMENTO ===================== -->
    <div class="mt-3">
        <label for="DepartamentoId" class="form-label text-muted small mb-1">
            <i class="bi bi-building me-1"></i>Departamento
        </label>
        <div class="input-group">
            @Html.DropDownList(
            "DepartamentoId",
                        ViewBag.DepartamentoId as SelectList,
                        htmlAttributes: new { @class = "form-select shadow-sm", id = "DepartamentoIdModal" }
                        )
            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modalGerenciarDepartamentos" title="Adicionar novo departamento">
                <i class="bi bi-plus-lg"></i>
            </button>
        </div>
        @Html.ValidationMessage("DepartamentoId", null, new { @class = "text-danger small" })
    </div>

    <!-- ===================== PERFIL E STATUS ===================== -->
    <div class="row mt-3 g-3">
        <div class="col-md-6">
            <label for="Perfil" class="form-label text-muted small mb-1">
                <i class="bi bi-person-gear me-1"></i>Perfil
            </label>
            @Html.DropDownList("Perfil", new List<SelectListItem> {
                        new SelectListItem { Value = "", Text = "Selecione..." },
                        new SelectListItem { Value = "Admin", Text = "Administrador/TI" },
                        new SelectListItem { Value = "Usuario", Text = "Utilizador Comum" }
                        },
                        new { @class = "form-select shadow-sm" })
            @Html.ValidationMessage("Perfil", null, new { @class = "text-danger small" })
        </div>

        <div class="col-md-6">
            <label for="Status" class="form-label text-muted small mb-1">
                <i class="bi bi-circle-half me-1"></i>Status
            </label>
            @Html.DropDownList("Status", new List<SelectListItem> {
                        new SelectListItem { Value = "Ativo", Text = "Ativo" },
                        new SelectListItem { Value = "Inativo", Text = "Inativo" }
                        },
                        new { @class = "form-select shadow-sm" })
            @Html.ValidationMessage("Status", null, new { @class = "text-danger small" })
        </div>
    </div>

    <!-- ===================== FOTO DE PERFIL ===================== -->
    <hr class="my-4" />
    <div class="text-center">
        <label class="form-label d-block text-muted mb-2">
            <i class="bi bi-camera me-1"></i>Foto de Perfil
        </label>

        <img id="previewImagemModal" src="~/img/default-user.png"
             class="rounded-circle shadow-sm border mb-3"
             style="width:100px; height:100px; object-fit:cover;" />

        <div class="d-flex justify-content-center">
            <input type="file" name="Imagem" id="inputImagemModal"
                   class="form-control form-control-sm w-75"
                   accept="image/*" />
        </div>

        <small class="text-muted d-block mt-2">
            Escolha uma imagem de perfil (opcional).
        </small>
    </div>

    <!-- ===================== AVISO SOBRE SENHA ===================== -->
    <div class="alert alert-info small mt-4 mb-0 shadow-sm" role="alert">
        <i class="bi bi-info-circle me-1"></i>
        Uma senha aleatória será gerada e enviada para o e-mail do utilizador.
    </div>
</form>

<!-- ===================== SCRIPT: Preview + Validação ===================== -->
<script>
    const inputImg = document.getElementById('inputImagemModal');
    const previewImg = document.getElementById('previewImagemModal');

    if (inputImg && previewImg) {
        inputImg.addEventListener('change', e => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = ev => previewImg.src = ev.target.result;
                reader.readAsDataURL(file);
            }
        });
    }

    // Reativa validação jQuery Unobtrusive
    if ($.validator && $.validator.unobtrusive) {
        $.validator.unobtrusive.parse("#formCriarUsuario");
    }
</script>
