@model Governança_de_TI.Models.UsuarioModel

<form id="formCriarUsuario" asp-action="Criar" enctype="multipart/form-data" method="post" class="p-2">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3 validation-summary-placeholder"></div>

    <!-- ===================== INFORMAÇÕES PRINCIPAIS ===================== -->
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Nome" class="form-label text-muted small mb-1">
                <i class="bi bi-person-circle me-1"></i>Nome
            </label>
            <input asp-for="Nome" class="form-control shadow-sm" placeholder="Digite o nome completo" />
            <span asp-validation-for="Nome" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label text-muted small mb-1">
                <i class="bi bi-envelope-at me-1"></i>Email
            </label>
            <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="exemplo@email.com" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>
    </div>

    <!-- ===================== DEPARTAMENTO ===================== -->
    <div class="mt-3">
        <label asp-for="DepartamentoId" class="form-label text-muted small mb-1">
            <i class="bi bi-building me-1"></i>Departamento
        </label>
        <div class="input-group">
            @Html.DropDownListFor(model => model.DepartamentoId,
            ViewBag.DepartamentoId as SelectList,
                        "Selecione...",
                        new { @class = "form-select shadow-sm", id = "DepartamentoIdModal" })
            <button type="button" class="btn btn-outline-secondary"
                    data-bs-toggle="modal"
                    data-bs-target="#modalGerenciarDepartamentos"
                    title="Adicionar novo departamento">
                <i class="bi bi-plus-lg"></i>
            </button>
        </div>
        <span asp-validation-for="DepartamentoId" class="text-danger small"></span>
    </div>

    <!-- ===================== PERFIL E STATUS ===================== -->
    <div class="row mt-3 g-3">
        <div class="col-md-6">
            <label asp-for="Perfil" class="form-label text-muted small mb-1">
                <i class="bi bi-person-gear me-1"></i>Perfil
            </label>
            @Html.DropDownListFor(model => model.Perfil,
                        new List<SelectListItem> {
                        new SelectListItem { Value = "", Text = "Selecione..." },
                        new SelectListItem { Value = "Admin", Text = "Administrador/TI" },
                        new SelectListItem { Value = "Usuario", Text = "Utilizador Comum" }
                        },
                        new { @class = "form-select shadow-sm" })
            <span asp-validation-for="Perfil" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Status" class="form-label text-muted small mb-1">
                <i class="bi bi-circle-half me-1"></i>Status
            </label>
            @Html.DropDownListFor(model => model.Status,
                        new List<SelectListItem> {
                        new SelectListItem { Value = "Ativo", Text = "Ativo" },
                        new SelectListItem { Value = "Inativo", Text = "Inativo" }
                        },
                        new { @class = "form-select shadow-sm" })
            <span asp-validation-for="Status" class="text-danger small"></span>
        </div>
    </div>

    <!-- ===================== FOTO DE PERFIL ===================== -->
    <hr class="my-4" />
    <div class="text-center">
        <label asp-for="FotoUpload" class="form-label d-block text-muted mb-2">
            <i class="bi bi-camera me-1"></i>Foto de Perfil
        </label>

        <!-- Pré-visualização -->
        <img id="previewImagemModal"
             src="~/img/default-user.png"
             class="rounded-circle shadow-sm border mb-3"
             style="width:100px; height:100px; object-fit:cover;" />

        <div class="d-flex justify-content-center">
            <input asp-for="FotoUpload"
                   type="file"
                   class="form-control form-control-sm w-75"
                   accept="image/*"
                   id="inputImagemModal" />
        </div>

        <small class="text-muted d-block mt-2">
            A imagem será salva automaticamente em <strong>wwwroot/perfil/perfil-X.jpg</strong>
        </small>
    </div>

    <!-- ===================== AVISO SOBRE SENHA ===================== -->
    <div class="alert alert-info small mt-4 mb-0 shadow-sm" role="alert">
        <i class="bi bi-info-circle me-1"></i>
        Uma senha aleatória será gerada e enviada para o e-mail do utilizador.
    </div>
</form>

<!-- ===================== SCRIPT: Preview da Imagem ===================== -->
<script>
    const inputImg = document.getElementById('inputImagemModal');
    const previewImg = document.getElementById('previewImagemModal');

    if (inputImg && previewImg) {
        inputImg.addEventListener('change', e => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = ev => previewImg.src = ev.target.result;
                reader.readAsDataURL(file);
            }
        });
    }

    // Reativa validação jQuery Unobtrusive (em recarregamentos AJAX)
    if ($.validator && $.validator.unobtrusive) {
        $.validator.unobtrusive.parse("#formCriarUsuario");
    }
</script>
