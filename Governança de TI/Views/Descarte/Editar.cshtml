@model Governança_de_TI.Models.DescarteModel
@{
    ViewData["Title"] = "Editar Registo de Descarte";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0 text-muted">Gestão de Descarte Sustentável</h4>
                    <h5 class="mb-0">Edição</h5>
                </div>

                <form asp-action="Editar" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Campos ocultos para enviar dados que não são editados -->
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="DataDeCadastro" />
                    <input type="hidden" asp-for="CertificadoUrl" />
                    <input type="hidden" asp-for="EquipamentoId" />

                    <div class="row">
                        <!-- Coluna da Esquerda -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="EquipamentoId" class="form-label"></label>
                                <input value="@Model.Equipamento?.Descricao" class="form-control" readonly />
                            </div>
                            <div class="mb-3">
                                <label asp-for="Observacao" class="form-label"></label>
                                <textarea asp-for="Observacao" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 mb-3">
                                    <label asp-for="Quantidade" class="form-label"></label>
                                    <input asp-for="Quantidade" class="form-control" type="number" />
                                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label asp-for="DataColeta" class="form-label"></label>
                                    <input asp-for="DataColeta" class="form-control" />
                                    <span asp-validation-for="DataColeta" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EmpresaColetora" class="form-label"></label>
                                <input asp-for="EmpresaColetora" class="form-control" />
                                <span asp-validation-for="EmpresaColetora" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 mb-3">
                                    <label asp-for="CnpjEmpresa" class="form-label"></label>
                                    <input asp-for="CnpjEmpresa" class="form-control" />
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label asp-for="EmailEmpresa" class="form-label"></label>
                                    <input asp-for="EmailEmpresa" class="form-control" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PessoaResponsavelColeta" class="form-label"></label>
                                <input asp-for="PessoaResponsavelColeta" class="form-control" />
                            </div>
                        </div>

                        <!-- Coluna da Direita (Imagem e outros campos) -->
                        <div class="col-md-6 d-flex flex-column">
                            <div class="align-self-center">
                                <label class="form-label">Imagem do Item</label>
                                <div class="text-center">
                                    <img id="imagePreview" src="@(string.IsNullOrEmpty(Model.Equipamento?.ImagemUrl) ? "https://placehold.co/250x250/f0f0f0/ccc?text=Imagem" : Url.Content("~" + Model.Equipamento.ImagemUrl))"
                                         alt="Pré-visualização da Imagem" style="width: 250px; height: 250px; border-radius: 1rem; object-fit: cover; border: 2px dashed #ccc;" />
                                </div>
                            </div>
                            <div class="mt-3">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-select">
                                    <option value="">Selecione...</option>
                                    <option>Pendente</option>
                                    <option>Coletado</option>
                                    <option>Reciclado</option>
                                    <option>Doado</option>
                                </select>
                            </div>
                            <div class="mt-3">
                                <label asp-for="CertificadoUpload" class="form-label"></label>
                                <input asp-for="CertificadoUpload" class="form-control" type="file" />
                            </div>
                            <div class="form-check mt-3">
                                <input asp-for="EnviarEmail" class="form-check-input" type="checkbox" />
                                <label asp-for="EnviarEmail" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-end">
                        <a asp-action="Consulta" class="btn btn-outline-secondary me-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary px-4" style="background-color: #8A2BE2; border-color: #8A2BE2;">Salvar Alterações</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

