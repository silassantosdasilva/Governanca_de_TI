@{

    Layout = null;

    ViewData["Title"] = "Página Principal";

}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle de Equipamentos</title>
    <!-- Dependências do Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <!-- Seu CSS customizado -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="page-container">
        <!-- Sidebar Fixa -->
        <nav class="sidebar">
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link active" title="Dashboard">
                        <i class="bi bi-house-door"></i>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Relatórios">
                        <i class="bi bi-bar-chart-line"></i>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Equipamentos">
                        <i class="bi bi-hdd-stack"></i>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Notificações">
                        <i class="bi bi-bell"></i>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="#" class="sidebar-nav-link" title="Configurações">
                        <i class="bi bi-gear"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Container para Header e Conteúdo -->
        <div class="main-wrapper">
            <!-- Header Superior -->
            <header class="main-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="user-greeting">
                        <input type="button"><img src="https://i.pravatar.cc/40?img=1" alt="Avatar do Utilizador" class="user-avatar"></input>
                        <div>
                            <h5 class="mb-0">Olá Olivia</h5>
                        </div>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-outline-secondary"><i class="bi bi-plus-lg me-2"></i>Nova Automação</button>
                        <button class="btn btn-primary"><i class="bi bi-file-earmark-plus me-2"></i>Novo Template</button>
                    </div>
                </div>
            </header>

            <!-- Barra de Ferramentas -->
            <div class="toolbar">
                <div class="d-flex justify-content-between align-items-center w-100 flex-wrap">
                    <div class="d-flex align-items-center">
                        <span class="me-2 text-muted small">Selecionar período:</span>
                        <div class="input-group date-picker-group">
                            <input type="text" class="form-control form-control-sm" value="de Jan 1, 2024">
                            <input type="text" class="form-control form-control-sm" value="até Dez 31, 2024">
                        </div>
                    </div>
                    <div class="d-flex align-items-center search-filter-group">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control form-control-sm border-start-0" placeholder="Buscar...">
                        </div>
                        <button class="btn btn-sm btn-outline-secondary ms-2"><i class="bi bi-funnel me-2"></i>Filtrar</button>
                    </div>
                </div>
            </div>

            <!-- Área de Conteúdo com Scroll -->
            <main class="content-area">
                <!-- Linha dos Indicadores Superiores (Cards de Métricas) -->
                <div class="row" id="metric-cards-container">
                    <!-- Cards serão inseridos aqui pelo JavaScript -->
                </div>

                <!-- Linha dos Gráficos Inferiores -->
                <div class="row">
                    <div class="col-xl-4 col-lg-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="card-title text-muted">Economia gerada (R$) - Mês</h6>
                                <canvas id="graficoEconomiaMes"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-8 col-lg-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="card-title text-muted">Consumo total (kWh) no Mês</h6>
                                <canvas id="graficoConsumoMes"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-xl-4 col-lg-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="card-title text-muted">Consumo por Setor</h6>
                                <canvas id="graficoConsumoSetor"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-8 col-lg-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="card-title text-muted">Consumo total (kWh) no Ano</h6>
                                <canvas id="graficoConsumoAno"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- CORREÇÃO: Adicionada a referência ao seu arquivo JS local -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
