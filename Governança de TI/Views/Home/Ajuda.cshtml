@model Governança_de_TI.Models.AjudaViewModel
@{
    ViewData["Title"] = "Ajuda";
    Layout = null; // Layout customizado
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROSPERA</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        /* OBSERVAÇÃO: Os estilos são os mesmos da tela de Register/Login para manter a consistência */
        /* Estilos consistentes com as outras páginas públicas */
        :root {
            --primary-purple: #8A2BE2;
            --dark-purple-wave: #6a0dad;
            --light-purple-bg: #F3F0FD;
            --text-color: #333;
            --input-border: #ccc;
            --box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: white;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        .navbar-login {
            background-color: white;
            padding: 1rem 4rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-logo {
            display: flex;
            align-items: center;
            font-weight: 700;
            color: var(--primary-purple);
            font-size: 1.2rem;
            text-decoration: none;
        }

            .navbar-logo img {
                height: 25px;
                margin-right: 0.5rem;
            }

        .navbar-btn {
            background-color: var(--primary-purple);
            color: white;
            border: none;
            padding: 0.7rem 1.8rem;
            border-radius: 0.5rem;
            font-weight: 500;
            text-decoration: none;
        }

        .help-container {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            padding: 2rem 0;
        }

        .wave-bg {
            position: absolute;
            width: 150%;
            height: 50%;
            background-color: var(--dark-purple-wave);
            border-radius: 50%;
            bottom: -25%;
            left: -25%;
            z-index: 1;
        }

        .help-card {
            background-color: white;
            border-radius: 1rem;
            box-shadow: var(--box-shadow);
            display: flex;
            overflow: hidden;
            max-width: 900px;
            width: 90%;
            z-index: 10;
        }

        .help-illustration {
            background-color: var(--light-purple-bg);
            padding: 2rem;
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1;
        }

            .help-illustration img {
                max-width: 100%;
                height: auto;
            }

        .help-form-area {
            padding: 2.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .help-form-area h2 {
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

        .form-control, .form-select {
            border-radius: 0.5rem;
            padding: 0.8rem;
            border: 1px solid var(--input-border);
        }

        .btn-enviar {
            background-color: var(--primary-purple);
            color: white;
            border: none;
            padding: 0.8rem 0;
            width: 100%;
            border-radius: 0.5rem;
            font-weight: 600;
            cursor: pointer;
        }

        .help-links {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.9rem;
        }

            .help-links a {
                color: var(--primary-purple);
                font-weight: 500;
            }

        .text-danger {
            font-size: 0.8rem;
        }

        .validation-summary-errors ul {
            list-style-type: none;
            padding: 0;
            color: #dc3545;
            font-size: 0.9rem;
        }

        /* OBSERVAÇÃO: A media query para responsividade foi completada. */
        @@media (max-width: 768px) {
            .help-card {
                flex-direction: column;
                margin: 1rem;
            }

            .help-illustration {
                order: -1; /* Coloca a imagem no topo em ecrãs pequenos */
                border-radius: 1rem 1rem 0 0;
            }

            .navbar-login {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar-login">
        <a asp-controller="Home" asp-action="Landing" class="navbar-logo">
            <img src="https://img.icons8.com/ios-filled/50/8A2BE2/diamond.png" alt="Logo Prospera" /> PROSPERA
        </a>
        <div>
            <a asp-controller="Home" asp-action="Landing" class="navbar-btn">INICIO</a>
        </div>
    </nav>

    <div class="help-container">
        <div class="wave-bg"></div>
        <div class="help-card">
            <div class="help-illustration">
                <img src="https://cdni.iconscout.com/illustration/premium/thumb/customer-support-service-5631641-4698183.png" alt="Ilustração de ajuda" />
            </div>
            <div class="help-form-area">
                <h2>Precisa de Ajuda?</h2>
                <p class="text-muted small mb-4">Envie a sua dúvida ou sugestão para a nossa equipa de suporte.</p>
                <form asp-action="Ajuda" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Observacao" class="form-label"></label>
                        <textarea asp-for="Observacao" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Observacao" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ImagemUpload" class="form-label"></label>
                        <input asp-for="ImagemUpload" class="form-control" type="file" />
                    </div>

                    <button type="submit" class="btn-enviar mt-3">ENVIAR MENSAGEM</button>

                    <div class="help-links">
                        <a asp-controller="Account" asp-action="Login">Voltar para o Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
