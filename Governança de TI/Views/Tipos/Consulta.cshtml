@using Governança_de_TI.DTOs
@using Governança_de_TI.DTOs.Financeiro
@* Views/Tipos/Consulta.cshtml - Tela de Consulta de Tipos (Categorias) *@
@model IEnumerable<TipoLancamentoDTO>
@{
    ViewData["Title"] = "Categorias Financeiras";
}

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h3 class="fw-bold text-primary">
            <i class="bi bi-tags me-2"></i> @ViewData["Title"]
        </h3>

        @* Botão para abrir o Modal de Novo Registro *@
        <button id="btnNovoRegistro" class="btn btn-success d-flex align-items-center"
                data-bs-toggle="modal" data-bs-target="#TipoModal" data-action="criar">
            <i class="bi bi-plus-circle me-2"></i> Nova Categoria
        </button>
    </div>
</div>

@* --- Tabela de Resultados (Grid) --- *@
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3">Nome da Categoria</th>
                        <th class="py-3 text-center">Tipo</th>
                        <th class="py-3 text-center">Ações</th>
                    </tr>
                </thead>
                <tbody id="tabelaTipos">
                    @* Os dados serão carregados via AJAX *@
                    <tr id="loadingRowTipo">
                        <td colspan="3" class="text-center text-muted py-4">
                            <div class="spinner-border spinner-border-sm me-2"></div>
                            Carregando dados...
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-muted small">
        <span id="totalRegistrosTipo">0</span> categorias cadastradas.
    </div>
</div>

@* --- Modal de Criação/Exclusão --- *@
<div class="modal fade" id="TipoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
            @* A PartialView será carregada aqui via AJAX *@
            <div id="TipoModalContent" class="p-4">
                <div class="text-center text-muted py-5">
                    <div class="spinner-border text-primary mb-2"></div><br />
                    Carregando formulário...
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const API_URL = '/api/financeiro/Tipos';
            const $tabela = $('#tabelaTipos');
            const $modal = $('#TipoModal');

            // Função de Carregamento da Tabela (Consulta)
            window.loadTiposTable = function () {
                $('#loadingRowTipo').show();
                $.ajax({
                    url: API_URL, // GET /api/financeiro/Tipos
                    method: 'GET',
                    success: function(response) {
                        if (response.success && response.data) {
                            renderTable(response.data);
                        } else {
                            window.showFeedbackModal('error', 'Erro ao carregar lista de categorias.');
                        }
                    },
                    error: function() {
                         window.showFeedbackModal('error', 'Falha na comunicação com a API de Tipos.');
                    },
                    complete: function() {
                        $('#loadingRowTipo').hide();
                    }
                });
            }

            // Função de Renderização da Tabela
            function renderTable(tipos) {
                $tabela.empty();
                if (tipos.length === 0) {
                     $tabela.append(`<tr><td colspan="3" class="text-center text-muted py-4">Nenhuma categoria encontrada.</td></tr>`);
                     $('#totalRegistrosTipo').text('0');
                     return;
                }

                tipos.forEach(t => {
                    const tipoText = t.tipo === 1 ? 'Despesa' : 'Receita';
                    const tipoClass = t.tipo === 1 ? 'bg-danger' : 'bg-success';

                    const row = `
                        <tr>
                            <td>${t.nome}</td>
                            <td class="text-center"><span class="badge ${tipoClass}">${tipoText}</span></td>
                            <td class="text-center">
                                @* Apenas exclusão, pois o PUT não estava na documentação 5.3 *@
                                <button class="btn btn-sm btn-outline-danger btn-excluir-tipo" title="Excluir" data-id="${t.id}" data-nome="${t.nome}">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                    $tabela.append(row);
                });
                $('#totalRegistrosTipo').text(tipos.length);
            }

            // Inicializa a tabela
            loadTiposTable();

            // --- LÓGICA DO MODAL CRIAÇÃO ---

            // Carrega a partial view do formulário ao clicar em Novo
            $('#btnNovoRegistro').on('click', function () {
                const $content = $('#TipoModalContent');

                $content.html(`<div class="text-center text-muted py-5"><div class="spinner-border text-primary mb-2"></div><br />Carregando formulário...</div>`);

                // Carrega a partial view do formulário
                $content.load('/Tipos/_CriarPartial', function() {
                    $('#modalTitle').text('Nova Categoria');
                });
            });

            // 2. Lógica de Exclusão (DELETE)
            $tabela.on('click', '.btn-excluir-tipo', function(e) {
                e.preventDefault();
                const id = $(this).data('id');
                const nome = $(this).data('nome');

                if (confirm(`Atenção! Excluir a categoria '${nome}' é irreversível e pode causar inconsistência no extrato. Deseja continuar?`)) {
                    $.ajax({
                        url: `${API_URL}/${id}`,
                        method: 'DELETE',
                        success: function(response) {
                            if (response.success) {
                                window.showFeedbackModal('success', response.message);
                                loadTiposTable(); // Recarrega
                            } else {
                                window.showFeedbackModal('error', response.message);
                            }
                        },
                        error: function(xhr) {
                            const errorMsg = xhr.responseJSON ? xhr.responseJSON.message : 'Erro ao deletar.';
                            window.showFeedbackModal('error', errorMsg);
                        }
                    });
                }
            });

            // Lógica de Recarregamento após Modal ser fechado (Necessário para Modais AJAX)
            $modal.on('hidden.bs.modal', function () {
                loadTiposTable();
            });
        });
    </script>
}