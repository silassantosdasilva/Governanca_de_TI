@model Governança_de_TI.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar Senha - TechGreen";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/RecuperaSenha.css" asp-append-version="true" />
    <!-- Bootstrap e Ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">


</head>

<body>
    <!-- VÍDEO DE FUNDO -->
    <video autoplay muted loop playsinline class="bg-video">
        <source src="~/videos/Roxo-royal.mp4" type="video/mp4">
    </video>

    <!-- CAMADA ESCURA -->
    <div class="overlay"></div>

    <!-- NAVBAR -->
    <nav class="navbar-login">
        <a href="#" class="navbar-logo">TechGreen</a>
        <a asp-controller="Home" asp-action="Landing" class="navbar-btn">Início</a>
    </nav>

    <!-- CONTEÚDO -->
    <div class="forgot-container">
        <div class="forgot-card">
            <div class="forgot-illustration">
                <img src="/img/TechGrenLogo.png" alt="Recuperar senha" />
            </div>

            <div class="forgot-form-area">
                <h2>Esqueceu a Senha? 🔑</h2>
                <p>Não se preocupe! Informe seu e-mail e enviaremos um link para redefinição.</p>

                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mt-2">@TempData["SuccessMessage"]</div>
                    }

                    <div class="input-wrapper">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="input-group-forgot">
                            <i class="bi bi-envelope"></i>
                            <input asp-for="Email" placeholder="Digite seu e-mail" />
                        </div>
                    </div>

                    <button type="submit" class="btn-forgot">Enviar Link</button>

                    <div class="forgot-links">
                        <a asp-action="Login">Voltar ao Login</a> |
                        <a asp-controller="Home" asp-action="Ajuda">Ajuda</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
