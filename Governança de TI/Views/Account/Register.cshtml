@model Governança_de_TI.Models.RegisterViewModel
@{
    ViewData["Title"] = "Cadastrar - TechGreen";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
    <!-- Bootstrap e Ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <!-- Fonte Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">


</head>

<body>
    <!-- VÍDEO DE FUNDO -->
    <video autoplay muted loop playsinline class="bg-video">
        <source src="~/videos/Roxo-royal.mp4" type="video/mp4">
    </video>

    <!-- CAMADA ESCURA -->
    <div class="overlay"></div>

    <!-- NAVBAR -->
    <nav class="navbar-login">
        <a href="#" class="navbar-logo">TechGreen</a>
        <a asp-controller="Home" asp-action="Landing" class="navbar-btn">Início</a>
    </nav>

    <!-- CONTEÚDO CADASTRO -->
    <div class="register-container">
        <div class="register-card">
            <div class="register-illustration">
                <img src="/img/TechGrenLogo.png" alt="Ilustração de cadastro" />
            </div>

            <div class="register-form-area">
                <h2>Crie sua conta 🌱</h2>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                    <div class="input-wrapper">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                        <div class="input-group-register">
                            <i class="bi bi-person"></i>
                            <input asp-for="Nome" placeholder="Nome completo" />
                        </div>
                    </div>

                    <div class="input-wrapper">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="input-group-register">
                            <i class="bi bi-envelope"></i>
                            <input asp-for="Email" placeholder="E-mail" />
                        </div>
                    </div>

                    <div class="alert alert-info small mt-3" role="alert" style="background-color: rgba(255,255,255,0.1); border: none; color: #e1d8ff;">
                        🔒 Uma senha aleatória será gerada e enviada para o seu e-mail.
                    </div>

                    <label class="checkbox-label mt-3">
                        <input asp-for="AceitaPromocoes" type="checkbox" /> Permito receber e-mails promocionais e novidades.
                    </label>

                    <button type="submit" class="btn-cadastrar">Cadastrar</button>

                    <div class="register-links">
                        Já tem uma conta? <a asp-action="Login">Logar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
