@model IEnumerable<Governança_de_TI.Models.ConsumoEnergiaModel>
@{
    ViewData["Title"] = "Consulta de Consumo de Energia";
}

<!-- Bloco para exibir mensagens de sucesso (Ex: após criar um novo registo) -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Registos de Consumo de Energia</h4>
            <a asp-action="Criar" class="btn btn-sm btn-primary" style="background-color: #8A2BE2; border-color: #8A2BE2;">
                <i class="bi bi-plus-lg me-2"></i>Novo Registo
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-sm align-middle">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.DataReferencia)</th>
                        <th>@Html.DisplayNameFor(model => model.ValorKwh)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <!-- Formata a data para exibir o nome do mês e o ano -->
                                <td>@item.DataReferencia.ToString("MMMM yyyy")</td>
                                <td>@item.ValorKwh.ToString("N2") kWh</td>
                                <td>
                                    <!-- Ações futuras (Editar, Excluir) podem ser adicionadas aqui -->
                                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary border-0" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-4">Nenhum registo de consumo encontrado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script opcional para fechar o alerta de sucesso automaticamente
        window.setTimeout(function() {
            var alert = document.querySelector('.alert');
            if (alert) {
                new bootstrap.Alert(alert).close();
            }
        }, 5000);
    </script>
}

