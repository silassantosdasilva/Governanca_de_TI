@model IEnumerable<Governança_de_TI.Models.ConsumoEnergiaModel>
@{
    ViewData["Title"] = "Registos de Consumo de Energia";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Registos de Consumo de Energia</h4>
            <a asp-action="Criar" class="btn btn-sm btn-primary" style="background-color: #8A2BE2; border-color: #8A2BE2;">
                <i class="bi bi-plus-lg me-2"></i>Novo Registo
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-sm">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.DataReferencia)</th>
                        <th>@Html.DisplayNameFor(model => model.ValorKwh)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DataReferencia.ToString("MMMM yyyy")</td>
                            <td>@item.ValorKwh.ToString("N2") kWh</td>
                            <td>
                                <!-- Futuramente, links para Editar e Excluir -->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
