@model Governança_de_TI.Models.ConsumoEnergiaModel
@{
    ViewData["Title"] = "Novo Registo de Consumo";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="mb-4">Novo Registo de Consumo</h4>
                <form asp-action="Criar">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="DataReferencia" class="form-label"></label>
                        <input asp-for="DataReferencia" class="form-control" type="month" />
                        <span asp-validation-for="DataReferencia" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ValorKwh" class="form-label"></label>
                        <input asp-for="ValorKwh" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="ValorKwh" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary" style="background-color: #8A2BE2; border-color: #8A2BE2;">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
