@model Governança_de_TI.Models.ConsumoEnergiaModel
@{
    ViewData["Title"] = "Novo Registo de Consumo";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h4 class="mb-4">Novo Registo de Consumo de Energia</h4>

                <form asp-action="Criar">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="DataReferencia" class="form-label"></label>
                        <!-- O tipo 'month' oferece um seletor de Mês/Ano amigável para o utilizador -->
                        <input asp-for="DataReferencia" class="form-control" type="month" />
                        <span asp-validation-for="DataReferencia" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ValorKwh" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="ValorKwh" class="form-control" type="number" step="0.01" placeholder="0,00" />
                            <span class="input-group-text">kWh</span>
                        </div>
                        <span asp-validation-for="ValorKwh" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary" style="background-color: #8A2BE2; border-color: #8A2BE2;">
                            <i class="bi bi-check-lg me-2"></i>Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // Renderiza os scripts de validação do jQuery para feedback instantâneo no formulário
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

